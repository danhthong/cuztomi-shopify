<header-drawer data-breakpoint="tablet">
  <details class="menu-drawer-container">
    <summary
      class="header__icon header__icon--menu focus-inset"
      aria-label="{{ 'sections.header.menu' | t }}"
    >
      <span class="header__icon-wrapper">
        {% render 'icon-hamburger' %}
      </span>
    </summary>
    <div
      id="menu-drawer"
      class="menu-drawer motion-reduce color-background-1"
      tabindex="-1"
    >
      <div class="menu-drawer__inner-container">
        <div class="menu-drawer__top container no-js-hidden">
          {% render 'header-logo', tag: 'h1' %}
          <span class="header__modal-close-button">
            <span class="header__icon-wrapper">
              {% render 'icon-close' %}
            </span>
          </span>
        </div>
        <div class="menu-drawer__main">
          <div class="menu-drawer__navigation-container">
            <nav class="menu-drawer__navigation">
              <ul class="menu-drawer__menu list-menu product-list" role="list">
                <li class="header-title"><span class="menu-drawer__menu-item list-menu__item focus-inset header-list">Discober our products</span></li>
                {%- for product in collections.all.products limit:10 -%}
                  <li>
                    <a
                      class="menu-drawer__menu-item list-menu__item focus-inset"
                      href="{{ product.url }}"
                      data-value="{{ product.handle }}"
                    >
                      {{ product.title }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
              <ul class="menu-drawer__menu list-menu" role="list">
                {%- for link in section.settings.menu.links -%}
                  {% liquid
                    assign mega_menu = false
                    assign mega_menu_with_cards = false
                  %}
                  {% for block in section.blocks %}
                    {% liquid
                      assign mega_menu_trigger = block.settings.mega_menu_trigger | handle | strip
                      assign mega_menu_with_cards_trigger = block.settings.mega_menu_with_cards_trigger | handle | strip

                      if link.handle == mega_menu_trigger and block.type == 'mega_menu'
                        assign mega_menu = true
                      endif

                      if link.handle == mega_menu_with_cards_trigger and block.type == 'mega_menu_with_cards'
                        assign mega_menu_with_cards = true
                      endif
                    %}
                  {% endfor %}
                  <li>
                    {%- if mega_menu -%}
                      <details>
                        <summary class="menu-drawer__menu-item list-menu__item focus-inset{% if link.child_active %} menu-drawer__menu-item--active{% endif %}">
                          <a
                            href="{{ link.url }}"
                            class="menu-drawer__menu-link list-menu__item focus-inset"
                            {% if childlink.current %}
                              aria-current="page"
                            {% endif %}
                            {% if settings.links_blank and link.type == 'http_link' %}
                              target="_blank"
                            {% endif %}
                            tabindex="0"
                          >
                            {{- link.title | escape -}}
                          </a>
                          {% render 'icon-caret-mobile-menu' %}
                        </summary>

                        <div class="menu-drawer__mega-menu">
                          {% render 'header-mega-menu-mobile', link: link, blocks: section.blocks %}
                        </div>
                      </details>
                    {%- elsif mega_menu_with_cards -%}
                      <menu-drawer>
                        <details id="Details-MobileMegaMenuWithCards-Link-{{ forloop.index }}">
                          <summary class="menu-drawer__menu-item menu-drawer__menu-item--mega-menu-with-cards list-menu__item focus-inset{% if link.child_active %} menu-drawer__menu-item--active{% endif %}">
                            <a
                              href="{{ link.url }}"
                              class="menu-drawer__menu-link list-menu__item focus-inset"
                              {% if childlink.current %}
                                aria-current="page"
                              {% endif %}
                              {% if settings.links_blank and link.type == 'http_link' %}
                                target="_blank"
                              {% endif %}
                              tabindex="0"
                            >
                              {{- link.title | escape -}}
                            </a>
                            {% render 'icon-caret-mobile-menu' %}
                          </summary>

                          {% render 'header-mega-menu-with-cards-mobile', link: link, blocks: section.blocks %}
                        </details>
                      </menu-drawer>
                    {%- elsif link.links != blank -%}
                      <details>
                        <summary class="menu-drawer__menu-item list-menu__item focus-inset">
                          <a
                            href="{{ link.url }}"
                            class="menu-drawer__menu-link list-menu__item focus-inset"
                            {% if link.current %}
                              aria-current="page"
                            {% endif %}
                            {% if settings.links_blank and link.type == 'http_link' %}
                              target="_blank"
                            {% endif %}
                            tabindex="0"
                          >
                            {{- link.title | escape -}}
                          </a>
                          {% render 'icon-caret-mobile-menu' %}
                        </summary>
                        <div
                          id="link-{{ link.title | escape }}"
                          class="menu-drawer__submenu motion-reduce"
                          tabindex="-1"
                        >
                          <div class="menu-drawer__inner-submenu">
                            <ul
                              class="menu-drawer__menu list-menu"
                              role="list"
                              tabindex="-1"
                            >
                              {%- for childlink in link.links -%}
                                <li>
                                  {%- if childlink.links == blank -%}
                                    <a
                                      href="{{ childlink.url }}"
                                      class="menu-drawer__menu-item list-menu__item focus-inset{% if childlink.current %} menu-drawer__menu-item--active{% endif %} childlink"
                                      {% if childlink.current %}
                                        aria-current="page"
                                      {% endif %}
                                      {% if settings.links_blank and childlink.type == 'http_link' %}
                                        target="_blank"
                                      {% endif %}
                                      tabindex="0"
                                    >
                                      {{- childlink.title | escape -}}
                                    </a>
                                  {%- else -%}
                                    <details>
                                      <summary class="menu-drawer__menu-item list-menu__item focus-inset childlink">
                                        <a
                                          href="{{ childlink.url }}"
                                          class="focus-inset"
                                          {% if childlink.current %}
                                            aria-current="page"
                                          {% endif %}
                                          {% if settings.links_blank and childlink.type == 'http_link' %}
                                            target="_blank"
                                          {% endif %}
                                          tabindex="0"
                                        >
                                          {{- childlink.title | escape -}}
                                        </a>
                                        {% render 'icon-caret-mobile-menu' %}
                                      </summary>
                                      <div
                                        id="childlink-{{ childlink.title | escape }}"
                                        class="menu-drawer__submenu motion-reduce"
                                      >
                                        <ul
                                          class="menu-drawer__menu list-menu"
                                          role="list"
                                          tabindex="-1"
                                        >
                                          {%- for grandchildlink in childlink.links -%}
                                            <li>
                                              <a
                                                href="{{ grandchildlink.url }}"
                                                class="menu-drawer__menu-item list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %} grandchildlink"
                                                {% if grandchildlink.current %}
                                                  aria-current="page"
                                                {% endif %}
                                                {% if settings.links_blank and grandchildlink.type == 'http_link' %}
                                                  target="_blank"
                                                {% endif %}
                                                tabindex="0"
                                              >
                                                {{- grandchildlink.title | escape -}}
                                              </a>
                                            </li>
                                          {%- endfor -%}
                                        </ul>
                                      </div>
                                    </details>
                                  {%- endif -%}
                                </li>
                              {%- endfor -%}
                            </ul>
                          </div>
                        </div>
                      </details>
                    {%- else -%}
                      <a
                        href="{{ link.url }}"
                        class="menu-drawer__menu-item list-menu__item focus-inset{% if link.current %} menu-drawer__menu-item--active{% endif %}"
                        {% if link.current %}
                          aria-current="page"
                        {% endif %}
                        {% if settings.links_blank and link.type == 'http_link' %}
                          target="_blank"
                        {% endif %}
                        tabindex="0"
                      >
                        {{- link.title | escape -}}
                      </a>
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            </nav>

            {%- if shop.customer_accounts_enabled -%}
              <div class="menu-drawer__utility-links">
                {%- if customer -%}
                  <div class="menu-drawer__utility-account">
                    {%- if customer.name != blank -%}
                      <span class="menu-drawer__utility-name body-large">
                        {{- customer.name -}}
                      </span>
                    {%- endif -%}

                    <ul class="menu-drawer__utility-account-body">
                      <li class="menu-drawer__utility-account-link">
                        <a href="{{ routes.account_url }}">
                          {{- 'customer.account_fallback' | t -}}
                        </a>
                      </li>
                      <li class="menu-drawer__utility-account-address">
                        <a href="{{ routes.account_addresses_url }}">
                          {{- 'customer.addresses.book' | t -}}
                        </a>
                      </li>
                    </ul>

                    <a
                      class="menu-drawer__utility-logout button button--transparent focus-inset"
                      href="{{ routes.account_logout_url }}"
                    >
                      <div class="button__content">
                        <span class="button__label" data-label="{{- 'customer.log_out' | t -}}">
                          {{- 'customer.log_out' | t -}}
                        </span>
                      </div>
                      <span class="animated-button-circle"></span>
                    </a>
                  </div>
                {%- else -%}
                  <a
                    href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                    class="button button--primary header__account-login focus-inset"
                  >
                    <div class="button__content">
                      <span class="button__label" data-label="{{ 'customer.log_in' | t }}">
                        {{ 'customer.log_in' | t }}
                      </span>
                    </div>
                    <span class="animated-button-circle"></span>
                  </a>
                  <div class="menu-drawer__account-register">
                    <a class="button focus-inset" href="{{ routes.account_register_url }}">
                      <div class="button__content">
                        <span
                          class="button__label"
                          data-label="{{- 'customer.login_page.create_account_header' | t -}}"
                        >
                          Sign Up
                        </span>
                      </div>
                    </a>
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}

            {% if section.settings.enable_social %}
              <ul class="list list-social list-unstyled" role="list">
                {%- if settings.social_twitter_link != blank -%}
                  <li class="list-social__item">
                    <a
                      href="{{ settings.social_twitter_link }}"
                      {% if settings.links_blank %}
                        target="_blank"
                      {% endif %}
                      class="list-social__link"

                      tabindex="0"
                    >
                      {%- render 'icon-twitter' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.twitter' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_facebook_link != blank -%}
                  <li class="list-social__item">
                    <a
                      href="{{ settings.social_facebook_link }}"
                      {% if settings.links_blank %}
                        target="_blank"
                      {% endif %}
                      class="list-social__link"

                      tabindex="0"
                    >
                      {%- render 'icon-facebook' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.facebook' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_pinterest_link != blank -%}
                  <li class="list-social__item">
                    <a
                      href="{{ settings.social_pinterest_link }}"
                      {% if settings.links_blank %}
                        target="_blank"
                      {% endif %}
                      class="list-social__link"

                      tabindex="0"
                    >
