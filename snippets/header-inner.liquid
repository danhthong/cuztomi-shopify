<div class="header__left">
  {% render 'secondary-logo' %}

  {% if section.settings.logo_position == 'left-logo' %}
    {% render 'header-logo', tag: 'h1' %}
  {% endif %}
  <div class="disclosure product-disclosure">
    <button
      type="button"
      class="header__product-button disclosure__button product-selector focus-inset"
      aria-expanded="false"
      aria-controls="HeaderProductList"
    >
      <span class="selected-product">
        Select a product
      </span>
      {% render 'icon-caret' %}
    </button>

    <ul
      id="HeaderProductList"
      role="list"
      class="disclosure__list list-unstyled color-background-1"
      hidden
    >
      {%- for product in collections.all.products limit:10 -%}
        <li class="disclosure__item" tabindex="-1">
          <a
            class="disclosure__link focus-inset"
            href="{{ product.url }}"
            data-value="{{ product.handle }}"
          >
            {{ product.title }}
          </a>
        </li>
      {%- endfor -%}
    </ul>
  </div>

</div>

{% if section.settings.logo_position == 'center-logo' %}
  {% render 'header-logo', tag: 'h1', position: 'center' %}
{% endif %}

<div class="header__column">
  <div class="header__icons">
    {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
      {% render 'header-localization' %}
    {%- endif -%}

    {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
      {% render 'header-language' %}
    {%- endif -%}

    {%- if shop.customer_accounts_enabled -%}
      {% render 'header-account' %}
    {%- endif -%}

    {% render 'header-cart' %}

    {% render 'secondary-logo' %}
  </div>
  {% render 'header-drawer', section: section %}

  {% render 'header-desktop-burger', section: section %}
</div>
