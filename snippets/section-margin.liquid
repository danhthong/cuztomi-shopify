#shopify-section-{{ section.id }} {
{% if section.settings.margin_top == 'no-indent' %}
  padding-top: 0;
{% elsif section.settings.margin_top == 'xl' %}
  padding-top: 40px;
{% elsif section.settings.margin_top == 'l' %}
  padding-top: 20px;
{% elsif section.settings.margin_top == 'm' %}
  padding-top: 16px;
{% elsif section.settings.margin_top == 's' %}
  padding-top: 12px;
{% else %}
  padding-top: 16px;
{% endif %}

{% if section.settings.margin_bottom == 'no-indent' %}
  padding-bottom: 0;
{% elsif section.settings.margin_bottom == 'xl' %}
  padding-bottom: 40px;
{% elsif section.settings.margin_bottom == 'l' %}
  padding-bottom: 20px;
{% elsif section.settings.margin_bottom == 'm' %}
  padding-bottom: 16px;
{% elsif section.settings.margin_bottom == 's' %}
  padding-bottom: 12px;
{% else %}
  padding-bottom: 16px;
{% endif %}
}

@media screen and (min-width: 750px) { #shopify-section-{{ section.id }} {
{% if section.settings.margin_top == 'no-indent' %}
  padding-top: 0;
{% elsif section.settings.margin_top == 'xl' %}
  padding-top: 60px;
{% elsif section.settings.margin_top == 'l' %}
  padding-top: 40px;
{% elsif section.settings.margin_top == 'm' %}
  padding-top: 32px;
{% elsif section.settings.margin_top == 's' %}
  padding-top: 24px;
{% else %}
  padding-top: 16px;
{% endif %}

{% if section.settings.margin_bottom == 'no-indent' %}
  padding-bottom: 0;
{% elsif section.settings.margin_bottom == 'xl' %}
  padding-bottom: 40px;
{% elsif section.settings.margin_bottom == 'l' %}
  padding-bottom: 20px;
{% elsif section.settings.margin_bottom == 'm' %}
  padding-bottom: 16px;
{% elsif section.settings.margin_bottom == 's' %}
  padding-bottom: 12px;
{% else %}
  padding-bottom: 16px;
{% endif %}
} }
