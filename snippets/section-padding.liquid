.section-{{ section.id }}-padding {
{% if section.settings.padding_top == 'no-indent' or section.settings.padding_top == blank %}
  padding-top: 0;
{% elsif section.settings.padding_top == 'xl' %}
  padding-top: 40px;
{% elsif section.settings.padding_top == 'l' %}
  padding-top: 20px;
{% elsif section.settings.padding_top == 'm' %}
  padding-top: 16px;
{% elsif section.settings.padding_top == 's' %}
  padding-top: 12px;
{% else %}
  padding-top: 0;
{% endif %}

{% if section.settings.padding_bottom == 'no-indent' or section.settings.padding_bottom == blank %}
  padding-bottom: 0;
{% elsif section.settings.padding_bottom == 'xl' %}
  padding-bottom: 40px;
{% elsif section.settings.padding_bottom == 'l' %}
  padding-bottom: 20px;
{% elsif section.settings.padding_bottom == 'm' %}
  padding-bottom: 16px;
{% elsif section.settings.padding_bottom == 's' %}
  padding-bottom: 12px;
{% else %}
  padding-bottom: 0;
{% endif %}
}

@media screen and (min-width: 750px) { .section-{{ section.id }}-padding {
{% if section.settings.padding_top == 'no-indent' or section.settings.padding_top == blank %}
  padding-top: 0;
{% elsif section.settings.padding_top == 'xl' %}
  padding-top: 60px;
{% elsif section.settings.padding_top == 'l' %}
  padding-top: 40px;
{% elsif section.settings.padding_top == 'm' %}
  padding-top: 32px;
{% elsif section.settings.padding_top == 's' %}
  padding-top: 24px;
{% else %}
  padding-top: 0;
{% endif %}

{% if section.settings.padding_bottom == 'no-indent' or section.settings.padding_bottom == blank %}
  padding-bottom: 0;
{% elsif section.settings.padding_bottom == 'xl' %}
  padding-bottom: 60px;
{% elsif section.settings.padding_bottom == 'l' %}
  padding-bottom: 40px;
{% elsif section.settings.padding_bottom == 'm' %}
  padding-bottom: 32px;
{% elsif section.settings.padding_bottom == 's' %}
  padding-bottom: 24px;
{% else %}
  padding-bottom: 0;
{% endif %}
} }
