<div class="infinite-scroll__data visibility-hidden">
  <input type="hidden" value="{{ next_url }}" data-next-url>
  <input type="hidden" value="{{ count_pages }}" data-total-pages>
  <input type="hidden" value="{{ current_page }}" data-current-page>
</div>
<div class="infinite-scroll__loader js-infinite-scroll loading">
  <div class="infinite-scroll__spinner">
    {%- render 'icon-loading' -%}
  </div>
</div>
