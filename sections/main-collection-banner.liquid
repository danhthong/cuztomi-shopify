{{ 'component-collection-hero.css' | asset_url | stylesheet_tag: preload: true }}

{%- style -%}
  {% render 'section-margin' %}
{%- endstyle -%}

{% liquid
  assign collection_image = collection.image

  if section.settings.image != blank and collection.id != blank
    assign collection_image = section.settings.image
  endif

  if collection_image == blank and collection.id == blank
    assign collection_image = section.settings.image_products
  endif

  if section.settings.image_ratio != 'adapt' and section.settings.image_ratio != 'adapt_content'
    assign aspect_ratio = section.settings.image_ratio | split: '/'
    assign temp = aspect_ratio[0] | append: '.0'
    assign padding_bottom = aspect_ratio[1] | divided_by: temp | times: 100 | round: 2
  elsif section.settings.image_ratio == 'adapt' and collection_image != blank
    assign padding_bottom = 1 | divided_by: collection_image.aspect_ratio | times: 100 | round: 2
  else
    assign padding_bottom = 0
  endif
-%}

<div class="collection-hero">
  <div class="container">
    <div
      class="collection-hero__wrapper{% if section.settings.show_collection_image and collection_image != blank %} color-{{ section.settings.color_scheme }} background collection-hero__wrapper--with-image{% endif %}"
      style="--padding-bottom: {{ padding_bottom }}%"
    >
      <div class="collection-hero__text-wrapper">
        {% if settings.show_breadcrumbs %}
          <nav
            id="breadcrumbs"
            class="breadcrumb body-small breadcrumb--center"
            role="navigation"
            aria-label="breadcrumbs"
          >
            <a href="{{ routes.root_url }}" title="{{ 'general.breadcrumbs.home' | t }}" class="focus-inset">
              {{- 'general.breadcrumbs.home' | t -}}
            </a>
            <div class="breadcrumb__delimiter"></div>
            <span>{{ page_title }} </span>
          </nav>
        {% endif %}

        <div class="page-header">
          <div class="page-header__inner">
            <h1 class="collection-hero__title title--page h2">
              <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
              {{- collection.title | escape -}}
            </h1>
          </div>
        </div>

        {%- if section.settings.show_collection_description and collection.description != blank -%}
          <div class="collection-hero__description rte">
            {{ collection.description }}
          </div>
        {%- endif -%}

        {%- if section.settings.enable_collection_list and section.settings.collection_list != blank -%}
          <div class="collection-hero__featured-collections">
            {%- if section.settings.add_all_products -%}
              <a
                class="collection-hero__featured-collection subtitle{% if collection.handle == "all" %} collection-hero__featured-collection--active{% endif %}"
                href="{{ routes.all_products_collection_url }}"
                aria-label="{{- 'sections.collection_template.all_products' | t -}}"
              >
                {{- 'sections.collection_template.all_products' | t -}}
              </a>
            {%- endif -%}
            {% for item in section.settings.collection_list %}
              <a
                class="collection-hero__featured-collection subtitle{% if item.title == collection.title %} collection-hero__featured-collection--active{% endif %}"
                href="{{ item.url | default: '#' }}"
                aria-label="{{ item.title | escape }}"
              >
                {{- item.title | escape -}}
              </a>
            {% endfor %}
          </div>
        {%- endif -%}
      </div>

      {%- if section.settings.show_collection_image and collection_image != blank -%}
        {%- capture sizes -%}
          (min-width: 1200px) calc(100vw - 160px), calc(100vw - 40px)
        {%- endcapture -%}
        {%- capture style -%}
          {%- if collection_image.presentation.focal_point -%}
            object-position: {{ collection_image.presentation.focal_point }};
          {%- endif -%}
        {%- endcapture -%}
        <div class="collection-hero__image-wrapper">
          <div class="media">
            {{
              collection_image
              | image_url: width: collection_image.width
              | image_tag:
                loading: 'lazy',
                widths: '360, 535, 720, 940, 1100, 1200, 1440, 1600, 1800, 2000, 2100, 2200, 2880, 3200, 3600, 4000, 4200, 4400',
                sizes: sizes,
                style: style,
                alt: collection_image.alt
            }}
          </div>
        </div>
        <div
          class="collection-hero__overlay"
          style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"
        ></div>
      {%- endif -%}
    </div>
  </div>
</div>

