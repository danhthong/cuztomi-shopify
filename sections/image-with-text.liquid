{{ 'section-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {% render 'section-padding' %}
  {% render 'section-margin' %}
{%- endstyle -%}

<div class="image-with-text color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding">
  <div class="container">
    {% render 'heading-group', section: section, class: 'image-with-text', text_align: section.settings.text_align %}

    <div
      class="content image-with-text-main image-with-text-main--align-image-{{ section.settings.img_position }} image-with-text-main--gap-{{ section.settings.section_gap }}"
    >
      <div
        class="image-with-text-img-wrapper"
        {% if section.settings.aspect_ratio != 'adapt' %}
          style="aspect-ratio: {{ section.settings.aspect_ratio }}"
        {% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- liquid
            assign object_fit = 'object-fit: ' | append: section.settings.object_fit

            assign settings_aspect_ratio = 1

            if section.settings.aspect_ratio != 'adapt'
              assign settings_aspect_ratio_numbers = section.settings.aspect_ratio | split: '/'
              assign settings_aspect_ratio = settings_aspect_ratio_numbers[0] | append: '.0' | divided_by: settings_aspect_ratio_numbers[1]
            endif

            assign calc_ratio = 1

            if section.settings.image.aspect_ratio > settings_aspect_ratio
              assign calc_ratio = section.settings.image.aspect_ratio | divided_by: settings_aspect_ratio | round: 2
            endif

            assign img_loading = 'lazy'

            if section.index == 1
              assign img_loading = 'eager'
            endif
          -%}
          {%- capture section_gap -%}
            {%- if section.settings.section_gap == 'small' -%}
              16px
            {%- elsif section.settings.section_gap == 'medium' -%}
              24px
            {%- elsif section.settings.section_gap == 'large' -%}
              32px
            {%- endif -%}
          {%- endcapture -%}
          {%- capture sizes -%}
            {%- if section.settings.img_position == 'top' or section.settings.img_position == 'bottom' -%}
              (min-width: 1440px) calc(1280px * {{ calc_ratio }}), (min-width: 1200px) calc(89vw * {{ calc_ratio }}), (min-width: 550px) calc(98vw * {{ calc_ratio }}), calc(92vw * {{ calc_ratio }})
            {%- else -%}
              (min-width: 1440px) calc((1280px - {{ section_gap }}) / 2 * {{ calc_ratio }}), (min-width: 1200px) calc(44vw * {{ calc_ratio }}), (min-width: 750px) calc(48vw * {{ calc_ratio }}), (min-width: 550px) calc(98vw * {{ calc_ratio }}), calc(92vw * {{ calc_ratio }})
            {%- endif -%}
          {%- endcapture -%}
          {{
            section.settings.image
            | image_url: width: 3840
            | image_tag:
              width: section.settings.image.width,
              height: section.settings.image.height,
              sizes: sizes,
              widths: '375, 550, 750, 1000, 1280, 1500, 1780, 2560, 3000, 3840',
              style: object_fit,
              loading: img_loading
          }}
        {%- else -%}
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--filled' }}
        {%- endif -%}
      </div>
      <div
        class="image-with-text-content color-{{ section.settings.color_scheme_content }} image-with-text-content--align-{{ section.settings.inner_content_align }} image-with-text-content--vertical-align-{{ section.settings.vertical_inner_content_align }}"
      >
        {%- if section.settings.inner_subheading != blank -%}
          <span class="image-with-text-content__subheading subtitle">
            {{- section.settings.inner_subheading | escape -}}
          </span>
        {%- endif -%}

        {%- if section.settings.inner_heading != blank -%}
          <h2 class="image-with-text-content__heading {{ section.settings.inner_heading_size }}">
            {{ section.settings.inner_heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.inner_text != blank -%}
          <p class="image-with-text-content__text body-normal">{{ section.settings.inner_text }}</p>
        {%- endif -%}

        {%- if section.settings.show_button != blank or section.settings.show_button_2 != blank -%}
          {% liquid
            assign has_tertiary_button = false

            if section.settings.show_button and section.settings.button_style == 'tertiary'
              assign has_tertiary_button = true
            endif

            if section.settings.show_button_2 and section.settings.button_style_2 == 'tertiary'
              assign has_tertiary_button = true
            endif
          %}
          <div class="image-with-text-content__buttons-container {% if has_tertiary_button == true %} image-with-text-content__buttons-container--with-tertiary{% endif %}">
            {%- if section.settings.show_button != blank -%}
              {% render 'button',
                layout: section,
                class: 'image-with-text-content__button image-with-text-content__button--primary'
              %}
            {% endif %}
            {% if section.settings.show_button_2 != blank %}
              {% render 'button',
                btn_link: section.settings.button_link_2,
                btn_label: section.settings.button_label_2,
                btn_style: section.settings.button_style_2,
                btn_arrow: section.settings.button_arrow_2,
                class: 'image-with-text-content__button image-with-text-content__button--secondary'
              %}
            {% endif %}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

