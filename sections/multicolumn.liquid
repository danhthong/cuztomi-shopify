{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
<script src="{{ 'multicolumn.js' | asset_url }}" defer="defer"></script>

{% style %}
  {% render 'section-padding' %}
  {% render 'section-margin' %}
{% endstyle %}

{%- style -%}
  .section-{{ section.id }}-padding .multicolumn-grid__wrapper {
    --row_gap: {{ section.settings.row_gap }}rem;
    --column_gap: {{ section.settings.column_gap }}rem;
    --column_padding: {{ section.settings.column_padding }}rem;
  }
{%- endstyle -%}

{%- for block in section.blocks -%}
  {% liquid
    if section.settings.column_aspect_ratio != 'adapt'
      assign aspect_ratio = section.settings.column_aspect_ratio | split: '/'
      assign temp = aspect_ratio[0] | append: '.0'
      assign card_padding_bottom = aspect_ratio[1] | divided_by: temp | times: 100 | round: 2
    elsif section.settings.column_aspect_ratio == 'adapt'
      assign card_padding_bottom = 0
    endif
  %}
  {%- style -%}
    .section-{{ section.id }}-padding .multicolumn-card::before {
      content: '';
      display: block;
      width: 0;
      padding-bottom: {{ card_padding_bottom }}%;
    }

    {%- if section.settings.column_width == "narrow" and section.settings.swipe_on_desktop == false -%}
      @media screen and (min-width: 1200px) {
        .section-{{ section.id }}-padding .multicolumn-card {
          min-width: unset !important;
          max-width: 26.4rem;
        }
      }
    {%- endif -%}
  {%- endstyle -%}
{%- endfor -%}

<div
  class="multicolumn color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding{% if section.settings.mobile_slider_layout_type == 'visible_overflow' %} multicolumn--visible-overflow{% endif %}"
  data-enable-mobile-slider="{{ section.settings.swipe_on_mobile }}"
  data-enable-desktop-slider="{{ section.settings.swipe_on_desktop }}"
  data-space-between="{{ section.settings.column_gap }}"
>
  <div class="container">
    {% render 'heading-group',
      section: section,
      class: 'multicolumn__header',
      text_align: section.settings.text_align
    %}

    <div
      class="content multicolumn-grid{% if section.blocks.size >= 1 %}{% if section.settings.swipe_on_mobile or section.settings.swipe_on_desktop %} swiper swiper--multicolumn{% endif %}{% if section.settings.mobile_slider_layout_type == 'visible_overflow' and section.settings.swipe_on_mobile %} swiper--multicolumn--visible-overflow{% endif %}{% endif %}"
    >
      <div class="multicolumn-grid__wrapper multicolumn-grid__wrapper--{{ section.settings.multicolumn_to_show }}{% if section.blocks.size >= 1 %} swiper-wrapper{% endif %}">
        {% for block in section.blocks %}
          <div
            class="multicolumn-card color-{{ section.settings.column_color_scheme }}{% if section.settings.column_padding != '0' %} multicolumn-card--with-paddings{% endif %}{% if section.settings.enable_column_border %} multicolumn-card--border multicolumn-card--with-paddings{% endif %}{% if section.settings.card_bg_color == 'secondary' %} multicolumn-card--bg-secondary{% endif %}"
            {{ block.shopify_attributes }}
          >
            <div class="multicolumn-card__inner multicolumn-card__inner--hor-align-{{ section.settings.content_horizontal_alignment }} multicolumn-card__inner--ver-align-{{ section.settings.content_vertical_alignment }}">
              {%- if block.settings.heading != blank or block.settings.image != blank -%}
                <div class="multicolumn-card__inner-top">
                  {%- if block.settings.heading != blank -%}
                    {%- if section.settings.heading != blank -%}
                      <h3 class="multicolumn-card__heading {{ section.settings.card_heading_size }} multicolumn-card__heading--font-{{ section.settings.card_heading_font }}">
                        <span>{{- block.settings.heading | escape -}}</span>
                      </h3>
                    {%- else -%}
                      <h2 class="multicolumn-card__heading {{ section.settings.card_heading_size }} multicolumn-card__heading--font-{{ section.settings.card_heading_font }}">
                        <span>{{- block.settings.heading | escape -}}</span>
                      </h2>
                    {%- endif -%}
                  {%- endif -%}

                  {%- if block.settings.image != blank -%}
                    {% liquid
                      if aspect_ratio == 'landscape'
                        assign settings_aspect_ratio = 1.77
                      elsif aspect_ratio == 'portrait'
                        assign settings_aspect_ratio = 0.8
                      else
                        assign settings_aspect_ratio = 1
                      endif

                      assign calc_ratio = 1
                      if block.settings.object_fit == 'cover' and block.settings.image.aspect_ratio > settings_aspect_ratio
                        assign calc_ratio = block.settings.image.aspect_ratio | divided_by: settings_aspect_ratio
                      endif

                      assign image_loading = 'lazy'

                      if section.index == 1
                        assign image_loading = 'eager'
                      endif
                    %}
                    {%- capture image_sizes -%}
                      {%- if block.settings.image_width == 'icon' -%}
                        calc(40px * {{ calc_ratio }})
                      {%- elsif block.settings.image_width == 'small' -%}
                        calc(80px * {{ calc_ratio }})
                      {%- elsif block.settings.image_width == 'medium' -%}
                        calc(130px * {{ calc_ratio }})
                      {%- elsif block.settings.image_width == 'full-width' -%}
                        {%- if section.settings.multicolumn_to_show == 1 -%}
                          (min-width: 1440px) 1280px, (min-width: 1200px) 89vw, (min-width: 990px) 97vw, (min-width: 750px) 96vw, (min-width: 576px) 95vw, 91vw
                        {%- elsif section.settings.multicolumn_to_show == 2 -%}
                          (min-width: 1440px) calc({{ calc_ratio }} * 624px), (min-width: 1200px) calc({{ calc_ratio }} * 44vw), (min-width: 990px) calc({{ calc_ratio }} * 47vw), (min-width: 750px) calc({{ calc_ratio }} * 46vw), (min-width: 576px) 45vw, 91vw
                        {%- elsif section.settings.multicolumn_to_show == 3 -%}
                          (min-width: 1440px) calc({{ calc_ratio }} * 406px), (min-width: 1200px) calc({{ calc_ratio }} * 28vw), (min-width: 990px) calc({{ calc_ratio }} * 30vw), (min-width: 750px) calc({{ calc_ratio }} * 46vw), (min-width: 576px) calc({{ calc_ratio }} * 45vw), 91vw
                        {%- elsif section.settings.multicolumn_to_show == 4 -%}
                          (min-width: 1440px) calc({{ calc_ratio }} * 296px), (min-width: 1200px) calc({{ calc_ratio }} * 21vw), (min-width: 990px) calc({{ calc_ratio }} * 30vw), (min-width: 750px) calc({{ calc_ratio }} * 46vw), (min-width: 576px) calc({{ calc_ratio }} * 45vw), 91vw'
                        {%- endif -%}
                      {%- endif -%}
                    {%- endcapture -%}

                    <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ block.settings.image_width }} multicolumn-card__image-wrapper--{{ block.settings.image_ratio }}{% if block.settings.image_2 != blank %} multicolumn-card__image-wrapper--with-dm-image{% endif %}{% if block.settings.enable_img_border_radius %} multicolumn-card__image-wrapper--with-border-radius{% endif %}">
                      {%- capture style -%}
                        object-fit: {{ block.settings.object_fit }};
                      {%- endcapture -%}
                      {% comment %} ----- MAIN IMAGE ----- {% endcomment %}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                          sizes: image_sizes,
                          widths: '40, 80, 120, 240, 300, 360, 535, 600, 720, 940, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600, 2800, 3000, 3200, 3400, 3600, 3800',
                          style: style,
                          class: 'multicolumn-card__image',
                          loading: image_loading
                      }}
                      {% comment %} ----- DARK MODE IMAGE ----- {% endcomment %}
                      {%- if block.settings.image_2 != blank -%}
                        {{
                          block.settings.image_2
                          | image_url: width: block.settings.image.width
                          | image_tag:
                            sizes: image_sizes,
                            widths: '40, 80, 120, 240, 300, 360, 535, 600, 720, 940, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600, 2800, 3000, 3200, 3400, 3600, 3800',
                            height: block.settings.image.height,
                            width: block.settings.image.width,
                            style: style,
                            class: 'multicolumn-card__image multicolumn-card__image--dark',
                            loading: image_loading
                        }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}

              {%- if block.settings.add_separator -%}
                <div class="multicolumn-card__separator"></div>
              {%- endif -%}

              {%- if block.settings.text != blank or block.settings.show_button -%}
                <div class="multicolumn-card__inner-bottom">
                  {%- if block.settings.text != blank -%}
                    <p class="multicolumn-card__text body-{{ section.settings.card_text_size }} multicolumn-card__text--{{ section.settings.card_text_color }}">
                      {{- block.settings.text -}}
                    </p>
                  {%- endif -%}

                  {%- if block.settings.show_button and block.settings.button_label != blank -%}
                    {% render 'button', layout: block, class: 'multicolumn-card__button' %}
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        {% endfor %}
      </div>
      {%- if section.settings.swipe_on_mobile
        and section.blocks.size >= 1
        and section.settings.mobile_slider_layout_type == 'with_arrows'
      -%}
        <div class="multicolumn-buttons no-js-hidden">
          <button class="multicolumn-button multicolumn-button--prev">
            {% render 'icon-btn-arrow' %}
          </button>
          <button class="multicolumn-button multicolumn-button--next">
            {% render 'icon-btn-arrow' %}
          </button>
        </div>
      {%- endif -%}
      {%- if section.settings.swipe_on_desktop and section.blocks.size >= 1 -%}
        <div class="multicolumn-grid__scrollbar swiper-scrollbar no-js-hidden"></div>
      {% endif %}
    </div>
  </div>
</div>

