{{ 'section-hero.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hero.js' | asset_url }}" defer="defer"></script>

{% liquid
  assign images_fetch_priority = 'auto'
  assign images_loading = 'lazy'

  if section.index == 1
    assign images_fetch_priority = 'high'
    assign images_loading = 'eager'
  endif

  assign is_header_overlay = false

  if section.index == 1 or section.index == null
    if section.settings.header_overlay == true
      assign is_header_overlay = true
    endif
  endif

  assign has_background_image = false
  if section.settings.background_image != blank or section.settings.mobile_background_image != blank
    assign has_background_image = true
  endif

  assign has_secondary_image = false
  if section.settings.secondary_image != blank or section.settings.mobile_secondary_image != blank
    assign has_secondary_image = true
  endif
%}

{% style %}
  @media screen and (max-width: 989px) {
    #hero-{{ section.id }} .hero-content {
      {%- if section.index == 1 or section.index == null -%}
        {%- if is_header_overlay -%}
          min-height: calc(100vh - var(--announcement-height));
          min-height: calc((var(--vh, 1vh) * 100) - var(--announcement-height));
          min-height: calc(100svh - var(--announcement-height));
        {%- else -%}
          min-height: calc(100vh - var(--announcement-height) - var(--header-height));
          min-height: calc((var(--vh, 1vh) * 100) - var(--announcement-height) - var(--header-height));
          min-height: calc(100svh - var(--announcement-height) - var(--header-height));
        {%- endif -%}
      {%- else -%}
        min-height: 100vh;
        min-height: calc((var(--vh, 1vh) * 100));
        min-height: 100svh;
      {%- endif -%}
    }
  }

  @media screen and (min-width: 990px) {
    #hero-{{ section.id }} .hero-content {
      {%- if section.index == 1 or section.index == null -%}
        {%- if is_header_overlay -%}
          min-height: calc(100vh - var(--announcement-height));
          min-height: calc((var(--vh, 1vh) * 100) - var(--announcement-height));
          min-height: calc(100svh - var(--announcement-height));
        {%- else -%}
          min-height: calc(100vh - var(--announcement-height) - var(--header-height));
          min-height: calc((var(--vh, 1vh) * 100) - var(--announcement-height) - var(--header-height));
          min-height: calc(100svh - var(--announcement-height) - var(--header-height));
        {%- endif -%}
      {%- else -%}
        min-height: 100vh;
        min-height: calc((var(--vh, 1vh) * 100));
        min-height: 100svh;
      {%- endif -%}
    }
  }
{% endstyle %}

{% style %}
  {% render 'section-margin' %}
{% endstyle %}

<div
  class="hero hero-{{ section.id }} color-{{ section.settings.color_scheme }} background{% if section.settings.animate %} animate{% endif %}{% if section.settings.show_secondary_media %} hero-has-secondary-image{% endif %}{% if section.index == 1 or section.index == null %} hero--first-section{% endif %}"
  style="--secondary-image-border-radius: {{ section.settings.secondary_image_border_radius }}px"
  id="hero-{{ section.id }}"
  {% if is_header_overlay %}
    data-header-overlay="true"
    data-color-scheme="{{ section.settings.color_scheme }}"
  {% endif %}
>
  {%- if section.settings.show_background_media -%}
    {%- if has_background_image and section.settings.background_video == blank -%}
      <div class="hero-bg-image-wrapper">
        {% liquid
          assign widths = '360, 535, 600, 720, 940, 1066, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600, 2800, 3000, 3200, 3400, 3600, 3800'
          assign widths_arr = widths | split: ', '

          assign one_bg_image = false
          if section.settings.background_image != blank and section.settings.mobile_background_image == blank
            assign one_bg_image = true
            assign section_bg_image = section.settings.background_image
          elsif section.settings.background_image == blank and section.settings.mobile_background_image != blank
            assign one_bg_image = true
            assign section_bg_image = section.settings.mobile_background_image
          endif

          assign calc_ratio = 1.2
        %}
        {%- capture sizes -%}
        calc({{ calc_ratio }} * 100vw)
      {%- endcapture -%}

        {%- if one_bg_image -%}
          {{
            section_bg_image
            | image_url: width: section_bg_image.width
            | image_tag:
              widths: widths,
              sizes: sizes,
              class: 'hero-bg-image',
              fetchpriority: images_fetch_priority,
              loading: images_loading
          }}
        {%- else -%}
          <picture style="display: block; width: 100%; height: 100%;">
            <source
              srcset="{% for width in widths_arr %}{{ section.settings.mobile_background_image | image_url: width: width }} {{ width }}w{% if forloop.last == false %}, {% endif %}{% endfor %}"
              media="(max-width: 575px)"
              sizes="{{ sizes }}"
            >
            <source
              srcset="{% for width in widths_arr %}{{ section.settings.background_image | image_url: width: width }} {{ width }}w{% if forloop.last == false %}, {% endif %}{% endfor %}"
              media="(min-width: 576px)"
              sizes="{{ sizes }}"
            >
            <img
              src="{{ section.settings.background_image | image_url: width: section.settings.background_image.width }}"
              alt="{{ section.settings.background_image.alt }}"
              width="{{ section.settings.background_image.width }}"
              height="{{ section.settings.background_image.height }}"
              sizes="{{ sizes }}"
              class="hero-bg-image"
              loading="{{ images_loading }}"
              fetchpriority="{{ images_fetch_priority }}"
              style="--focal_point_desktop: {{ section.settings.background_image.presentation.focal_point }}; --focal_point_mobile: {{ section.settings.mobile_background_image.presentation.focal_point }};"
            >
          </picture>
        {%- endif -%}
        {%- if section.settings.overlay_opacity > 0 -%}
          {%- if section.settings.overlay_as_gradient -%}
            {%- capture overlay_styles -%}
              background: linear-gradient(
                to bottom,
                rgba(var(--color-overlay), {{ section.settings.overlay_opacity | divided_by: 100.0 | times: 0.3 }}),
                rgba(var(--color-overlay), {{ section.settings.overlay_opacity | divided_by: 100.0 }})
              );
            {%- endcapture -%}
          {%- else -%}
            {%- capture overlay_styles -%}background: rgb(var(--color-overlay)); opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};{%- endcapture -%}
          {%- endif -%}
          <div
            class="hero-bg-image-overlay"
            style="{{ overlay_styles }}"
          ></div>
        {%- endif -%}
      </div>
    {%- else -%}
      <div class="hero-bg-image-wrapper">
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--filled hero-bg-image' }}
        {%- if section.settings.overlay_opacity > 0 -%}
          {%- if section.settings.overlay_as_gradient -%}
            {%- capture overlay_styles -%}
              background: linear-gradient(
                to bottom,
                rgba(var(--color-overlay), {{ section.settings.overlay_opacity | divided_by: 100.0 | times: 0.3 }}),
                rgba(var(--color-overlay), {{ section.settings.overlay_opacity | divided_by: 100.0 }})
              );
            {%- endcapture -%}
          {%- else -%}
            {%- capture overlay_styles -%}background: rgb(var(--color-overlay)); opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};{%- endcapture -%}
          {%- endif -%}
          <div
            class="hero-bg-image-overlay"
            style="{{ overlay_styles }}"
          ></div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.settings.background_video != blank -%}
      <div class="hero-bg-image-wrapper">
        {{
          section.settings.background_video
          | video_tag:
            image_size: '2160x',
            autoplay: true,
            loop: true,
            controls: false,
            muted: true,
            class: 'hero-bg-image hero-bg-image--video'
        }}
        {%- if section.settings.overlay_opacity > 0 -%}
          {%- if section.settings.overlay_as_gradient -%}
            {%- capture overlay_styles -%}
              background: linear-gradient(
                to bottom,
                rgba(var(--color-overlay), {{ section.settings.overlay_opacity | divided_by: 100.0 | times: 0.3 }}),
                rgba(var(--color-overlay), {{ section.settings.overlay_opacity | divided_by: 100.0 }})
              );
            {%- endcapture -%}
          {%- else -%}
            {%- capture overlay_styles -%}
              background: rgba(var(--color-overlay));
              opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
            {%- endcapture -%}
          {%- endif -%}
          <div
            class="hero-bg-image-overlay"
            style="{{ overlay_styles }}"
          ></div>
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- endif -%}

  <div class="hero-main">
    {% if section.settings.section_heading != blank
      or section.settings.description != blank
      or section.settings.show_button
    %}
      <div class="hero-content-wrapper">
        <div class="container">
          <div class="hero-content">
            {%- if section.settings.section_heading != blank -%}
              <h2 class="hero-heading {{ section.settings.section_heading_size }}">
                {{- section.settings.section_heading -}}
              </h2>
            {%- endif -%}
            {% if section.settings.animate != true %}
              {%- if section.settings.section_heading_2 != blank or section.settings.show_button -%}
                <div class="hero-content-bottom">
                  <p class="hero-secondary-heading {{ section.settings.section_heading_size_2 }}">
                    {{- section.settings.section_heading_2 -}}
                  </p>
                  {%- if section.settings.show_button -%}
                    {% render 'button', layout: section, class: 'hero-button' %}
                  {%- endif -%}
                </div>
              {%- endif -%}
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  {%- if section.settings.show_secondary_media -%}
    {%- if has_secondary_image or section.settings.secondary_video != blank -%}
      <div class="hero-sticky-wrapper">
        <div class="hero-sticky">
          <div
            class="hero-sticky-image-container{% if section.settings.secondary_image_overlay_opacity > 0 %} hero-sticky-image-container--with-overlay{% endif %}"
            style="{% if section.settings.secondary_image_overlay_opacity > 0 %}--secondary-overlay-opacity: {{ section.settings.secondary_image_overlay_opacity}}%{% endif %}"
          >
            {%- if has_secondary_image and section.settings.secondary_video == blank -%}
              {% liquid
                assign widths = '360, 535, 600, 720, 940, 1066, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600, 2800, 3000, 3200, 3400, 3600, 3800'
                assign widths_arr = widths | split: ', '

                assign one_sec_image = false
                if section.settings.secondary_image != blank and section.settings.mobile_secondary_image == blank
                  assign one_sec_image = true
                  assign secondary_image = section.settings.secondary_image
                elsif section.settings.secondary_image == blank and section.settings.mobile_secondary_image != blank
                  assign one_sec_image = true
                  assign secondary_image = section.settings.mobile_secondary_image
                endif
              %}
              {%- capture sizes -%}
              (min-width: 576px) 100vw, calc(1.2 * 100vw)
            {%- endcapture -%}

              {%- if one_sec_image -%}
                {{
                  secondary_image
                  | image_url: width: secondary_image.width
                  | image_tag:
                    widths: widths,
                    sizes: sizes,
                    class: 'hero-sticky-image',
                    fetchpriority: images_fetch_priority,
                    loading: images_loading
                }}
              {%- else -%}
                <picture style="display: block; width: 100%; height: 100%;">
                  <source
                    srcset="{% for width in widths_arr %}{{ section.settings.mobile_secondary_image | image_url: width: width }} {{ width }}w{% if forloop.last == false %}, {% endif %}{% endfor %}"
                    media="(max-width: 575px)"
                    sizes="{{ sizes }}"
                  >
                  <source
                    srcset="{% for width in widths_arr %}{{ section.settings.secondary_image | image_url: width: width }} {{ width }}w{% if forloop.last == false %}, {% endif %}{% endfor %}"
                    media="(min-width: 576px)"
                    sizes="{{ sizes }}"
                  >
                  <img
                    src="{{ section.settings.secondary_image | image_url: width: section.settings.secondary_image.width }}"
                    alt="{{ section.settings.secondary_image.alt }}"
                    width="{{ section.settings.secondary_image.width }}"
                    height="{{ section.settings.secondary_image.height }}"
                    sizes="{{ sizes }}"
                    class="hero-sticky-image"
                    loading="{{ images_loading }}"
                    fetchpriority="{{ images_fetch_priority }}"
                    style="--focal_point_desktop: {{ section.settings.secondary_image.presentation.focal_point }}; --focal_point_mobile: {{ section.settings.secondary_image.presentation.focal_point }};"
                  >
                </picture>
              {%- endif -%}
            {%- endif -%}
            {%- if section.settings.secondary_video -%}
              {{
                section.settings.secondary_video
                | video_tag:
                  image_size: '2160x',
                  autoplay: true,
                  loop: true,
                  controls: false,
                  muted: true,
                  class: 'hero-sticky-image hero-sticky-image--video'
              }}
            {%- endif -%}
            {%- if section.settings.section_heading_2 != blank or section.settings.show_button -%}
              <div class="hero-secondary-heading-container">
                <div class="container">
                  <div class="hero-secondary-heading-wrapper">
                    {%- if section.settings.section_heading_2 != blank -%}
                      <p class="hero-secondary-heading {{ section.settings.section_heading_size_2 }}">
                        {{- section.settings.section_heading_2 -}}
                      </p>
                    {%- endif -%}
                    {%- if section.settings.show_button -%}
                      {% render 'button', layout: section, class: 'hero-button' %}
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- else -%}
      <div class="hero-sticky-wrapper">
        <div class="hero-sticky">
          <div
            class="hero-sticky-image-container{% if section.settings.secondary_image_overlay_opacity > 0 %} hero-sticky-image-container--with-overlay{% endif %}"
            style="{% if section.settings.secondary_image_overlay_opacity > 0 %}--secondary-overlay-opacity: {{ section.settings.secondary_image_overlay_opacity}}%{% endif %}"
          >
            {{
              'hero-apparel-2'
              | placeholder_svg_tag: 'placeholder-svg placeholder-svg--filled placeholder-svg--no-transition hero-sticky-image'
            }}
            {%- if section.settings.section_heading_2 != blank or section.settings.show_button -%}
              <div class="hero-secondary-heading-container">
                <div class="container">
                  <div class="hero-secondary-heading-wrapper">
                    {%- if section.settings.section_heading_2 != blank -%}
                      <p class="hero-secondary-heading {{ section.settings.section_heading_size_2 }}">
                        {{- section.settings.section_heading_2 -}}
                      </p>
                    {%- endif -%}
                    {%- if section.settings.show_button -%}
                      {% render 'button', layout: section, class: 'hero-button' %}
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endif -%}
  {%- endif -%}
</div>

