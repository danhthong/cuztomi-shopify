{{ 'component-cart.css' | asset_url | stylesheet_tag: preload: true }}
{{ 'component-totals.css' | asset_url | stylesheet_tag }}

{%- if settings.enable_cart_drawer == false -%}
  {{ 'component-cart-items.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>

  {% if settings.show_shipping or settings.show_cart_recommended_products %}
    {{ 'component-cart-shipping.css' | asset_url | stylesheet_tag }}
  {% endif %}
{%- endif -%}

{%- style -%}
  {% render 'section-margin' %}
{%- endstyle -%}

<div class="main-cart section-{{ section.id }}-padding">
  <div class="page-header">
    <div class="page-header__inner">
      <h1 class="main-page-title page-title title--page h2">{{ 'sections.cart.title' | t }}</h1>
    </div>
  </div>

  <div class="container">
    <div class="main-cart__wrapper{% if cart == empty %} is-empty{% endif %}">
      <cart-items class="{% if cart == empty %} is-empty{% endif %}">
        <div class="cart__warnings">
          <div class="cart__empty-wrapper">
            <p class="cart__empty-text h4">
              {% if settings.title_empty_cart != blank %}
                {{- settings.title_empty_cart -}}
              {% else %}
                {{- 'general.cart.empty_cart' | t -}}
              {% endif %}
            </p>
            {% if settings.text_empty_cart != blank %}
              <p class="cart__empty-desc">{{- settings.text_empty_cart -}}</p>
            {% endif %}
          </div>

          {% liquid
            assign button_label = 'general.cart.button_label' | t
            if settings.button_label_empty_cart != blank
              assign button_label = settings.button_label_empty_cart
            endif

            assign button_link = routes.collections_url | sort_by: 'best-selling'
            if settings.button_link_empty_cart != blank
              assign button_link = settings.button_link_empty_cart
            endif
          %}
          <a href="{{ button_link }}" class="button button--primary focus-inset">
            <div class="button__content">
              <span class="button__label" data-label="{{- button_label | escape -}}">
                {{- button_label | escape -}}
              </span>
            </div>
            <span class="animated-button-circle"></span>
          </a>
        </div>

        <form action="{{ routes.cart_url }}" class="cart__contents critical-hidden" method="post" id="cart">
          <div id="main-cart-items" data-id="{{ section.id }}">
            <div class="js-contents">
              {%- if cart != empty -%}
                <div class="cart-items">
                  {%- for item in cart.items -%}
                    <div
                      id="CartItem-{{ item.index | plus: 1 }}"
                      class="cart-item"
                    >
                      <div class="cart-item__inner-top">
                        {% if item.image %}
                          {% liquid
                            case settings.cart_image_ratio
                              when 'landscape'
                                assign ratio = '4/3'
                                assign settings_aspect_ratio = 1.33
                              when 'portrait'
                                assign ratio = '106/131'
                                assign settings_aspect_ratio = 0.8
                              when 'square'
                                assign ratio = '1/1'
                                assign settings_aspect_ratio = 1
                            endcase

                            assign aspect_ratio = ratio | split: '/'
                            assign temp = aspect_ratio[0] | append: '.0'
                            assign padding_bottom = aspect_ratio[1] | divided_by: temp | times: 100 | round: 2

                            assign calc_ratio = 1
                            if settings.cart_image_fit == 'cover' and item.image.aspect_ratio > settings_aspect_ratio
                              assign calc_ratio = item.image.aspect_ratio | divided_by: settings_aspect_ratio | round: 2
                            endif
                          %}
                          <div class="cart-item__left">
                            <div
                              class="cart-item__media"
                              style="padding-bottom: {{ padding_bottom }}%"
                            >
                              {%- capture img_sizes -%}
                                (min-width: 576px) calc({{ calc_ratio }} * 110px), calc({{ calc_ratio }} * 70px)
                              {%- endcapture -%}
                              {%- capture image_styles -%}
                                object-fit: {{ settings.cart_image_fit }};
                              {%- endcapture -%}
                              <a
                                href="{{ item.url }}"
                                class="cart-item__link focus-inset"
                                aria-label="{{ 'accessibility.product_link' | t }}"
                              ></a>
                              {{
                                item.image
                                | image_url: width: item.image.width
                                | image_tag:
                                  loading: 'lazy',
                                  widths: '70, 110, 140, 220, 330, 550, 750, 990, 1200, 1500, 1800, 2000',
                                  sizes: img_sizes,
                                  class: 'cart-item__image',
                                  style: image_styles
                              }}
                            </div>
                          </div>
                        {% endif %}

                        <div class="cart-item__details">
                          <div class="cart-item__details-wrapper">
                            <div class="cart-item__info">
                              <div class="cart-item__line">
                                <div class="cart-item__line-group">
                                  {%- if settings.cart_show_vendor -%}
                                    <div class="cart-item__vendor subtitle">
                                      {% if settings.enable_vendor_link %}
                                        {{ item.product.vendor | link_to_vendor: class: 'focus-inset' }}
                                      {% else %}
                                        {{ item.product.vendor }}
                                      {% endif %}
                                    </div>
                                  {% endif %}

                                  <a href="{{ item.url }}" class="cart-item__name focus-inset">
                                    {{ item.product.title | escape }}
                                  </a>
                                </div>

                                <div class="cart-item__price-wrapper">
                                  {%- if item.original_price != item.final_price -%}
                                    <span class="visually-hidden">
                                      {{- 'products.product.price.sale_price' | t -}}
                                    </span>
                                    <span class="cart-item__final-price cart-item__final-price_sale">
                                      {% if settings.currency_code_enabled %}
                                        {{ item.final_price | money_with_currency }}
                                      {% else %}
                                        {{ item.final_price | money }}
                                      {% endif %}
                                    </span>
                                    <span class="visually-hidden">
                                      {{- 'products.product.price.regular_price' | t -}}
                                    </span>
                                    <s class="cart-item__old-price">
                                      {%- if settings.currency_code_enabled -%}
                                        {{- item.original_price | money_with_currency -}}
                                      {%- else -%}
                                        {{- item.original_price | money -}}
                                      {%- endif -%}
                                    </s>
                                  {%- else -%}
                                    {%- if settings.currency_code_enabled -%}
                                      {{ item.original_price | money_with_currency }}
                                    {%- else -%}
                                      {{ item.original_price | money }}
                                    {%- endif -%}
                                  {%- endif -%}

                                  {%- if item.variant.available and item.unit_price_measurement -%}
                                    <div class="unit-price caption">
                                      <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                                      {% if settings.currency_code_enabled %}
                                        {{ item.variant.unit_price | money_with_currency }}
                                      {% else %}
                                        {{ item.variant.unit_price | money }}
                                      {% endif %}
                                      <span aria-hidden="true">/</span>
                                      <span class="visually-hidden"
                                        >&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span
                                      >
                                      {%- if item.variant.unit_price_measurement.reference_value != 1 -%}
                                        {{- item.variant.unit_price_measurement.reference_value -}}
                                      {%- endif -%}
                                      {{ item.variant.unit_price_measurement.reference_unit }}
                                    </div>
                                  {%- endif -%}
                                </div>
                              </div>

                              {% comment %} render options {% endcomment %}
                              {%- if item.product.has_only_default_variant == false -%}
                                <dl class="product-option__group">
                                  {%- for option in item.options_with_values -%}
                                    <div class="product-option body-small">
                                      <dt>{{ option.name }}:</dt>
                                      <dd>{{ option.value }}</dd>
                                    </div>
                                  {%- endfor -%}
                                </dl>
                              {%- endif -%}

                              {% comment %} render properties {% endcomment %}
                              {%- if item.properties.size != 0 -%}
                                <dl class="product-option__group">
                                  {%- for property in item.properties -%}
                                    {%- assign property_first_char = property.first | slice: 0 -%}
                                    {%- if property.last != blank and property_first_char != '_' -%}
                                      <div class="product-option body-small">
                                        <dt>{{ property.first }}:</dt>
                                        <dd>
                                          {%- if property.last contains '/uploads/' -%}
                                            <a
                                              href="{{ property.last }}"
                                              class="link"
                                              target="_blank"
                                            >
                                              {{ property.last | split: '/' | last }}
                                            </a>
                                          {%- else -%}
                                            {{ property.last }}
                                          {%- endif -%}
                                        </dd>
                                      </div>
                                    {%- endif -%}
                                  {%- endfor -%}
                                </dl>
                              {%- endif -%}

                              {% comment %} render selling_plan_allocation {% endcomment %}
                              {%- if item.selling_plan_allocation != blank -%}
                                <p class="product-option body-small">
                                  {{ item.selling_plan_allocation.selling_plan.name }}
                                </p>
                              {%- endif -%}

                              {% comment %} render discounts {% endcomment %}
                              {%- if item.line_level_discount_allocations.size != 0 -%}
                                <ul
                                  class="discounts list-unstyled"
                                  role="list"
                                  aria-label="{{ 'customer.order.discount' | t }}"
                                >
                                  {%- for discount in item.line_level_discount_allocations -%}
                                    {% liquid
                                      if settings.currency_code_enabled
                                        assign discount_total = discount.discount_application.total_allocated_amount | money_with_currency
                                      else
                                        assign discount_total = discount.discount_application.total_allocated_amount | money
                                      endif
                                    %}
                                    <li class="discounts__discount">
                                      {%- render 'icon-discount' -%}
                                      {{ discount.discount_application.title }}
                                      (- {{ discount_total }})
                                    </li>
                                  {%- endfor -%}
                                </ul>
                              {%- endif -%}
                            </div>
                          </div>

                          <div
                            id="Line-item-error-{{ item.index | plus: 1 }}"
                            class="cart-item__error"
                            role="alert"
                          >
                            <small class="cart-item__error-text"></small>
                            {% render 'icon-error' %}
                          </div>

                          <div class="cart-item__bottom">
                            <div class="cart-item__bottom-controls">
                              <div class="cart-item__quantity-wrapper">
                                <label class="visually-hidden" for="Quantity-{{ item.index | plus: 1 }}">
                                  {{ 'products.product.quantity.label' | t }}
                                </label>
                                <quantity-input class="quantity">
                                  <button
                                    class="quantity__button no-js-hidden focus-inset"
                                    name="minus"
                                    type="button"
                                  >
                                    <span class="visually-hidden">
                                      {{-
                                        'products.product.quantity.decrease'
                                        | t: product: item.product.title
                                        | escape
                                      -}}
                                    </span>
                                    {% render 'icon-minus' %}
                                  </button>
                                  <input
                                    class="quantity__input focus-inset"
                                    type="number"
                                    name="updates[]"
                                    value="{{ item.quantity }}"
                                    min="0"
                                    aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                    id="Quantity-{{ item.index | plus: 1 }}"
                                    data-index="{{ item.index | plus: 1 }}"
                                  >
                                  <button
                                    class="quantity__button no-js-hidden focus-inset"
                                    name="plus"
                                    type="button"
                                  >
                                    <span class="visually-hidden">
                                      {{-
                                        'products.product.quantity.increase'
                                        | t: product: item.product.title
                                        | escape
                                      -}}
                                    </span>
                                    {% render 'icon-plus' %}
                                  </button>
                                </quantity-input>
                              </div>

                              <cart-remove-button
                                id="Remove-{{ item.index | plus: 1 }}"
                                data-index="{{ item.index | plus: 1 }}"
                              >
                                <button
                                  type="button"
                                  class="button focus-inset"
                                  aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                                >
                                  {% render 'icon-remove' %}
                                </button>
                              </cart-remove-button>
                            </div>

                            {% if item.quantity > 1 %}
                              <dl class="cart-item__price-wrapper">
                                {%- if item.original_line_price != item.final_line_price -%}
                                  <dt class="visually-hidden">
                                    {{- 'products.product.price.sale_price' | t -}}
                                  </dt>
                                  <dd class="cart-item__final-price cart-item__final-price_sale">
                                    {% if settings.currency_code_enabled %}
                                      {{ item.final_line_price | money_with_currency }}
                                    {% else %}
                                      {{ item.final_line_price | money }}
                                    {% endif %}
                                  </dd>
                                  <dt class="visually-hidden">
                                    {{- 'products.product.price.regular_price' | t -}}
                                  </dt>
                                  <dd>
                                    <s class="cart-item__old-price">
                                      {%- if settings.currency_code_enabled -%}
                                        {{ item.original_line_price | money_with_currency }}
                                      {%- else -%}
                                        {{ item.original_line_price | money }}
                                      {%- endif -%}
                                    </s>
                                  </dd>
                                {%- else -%}
                                  <dt class="visually-hidden">
                                    {{ 'products.product.price.regular_price' | t }}
                                  </dt>
                                  <dd class="cart-item__final-price">
                                    {%- if settings.currency_code_enabled -%}
                                      {{ item.original_line_price | money_with_currency }}
                                    {%- else -%}
                                      {{ item.original_line_price | money }}
                                    {%- endif -%}
                                  </dd>
                                {%- endif -%}
                              </dl>
                            {% endif %}
                          </div>
                        </div>
                      </div>

                      <div class="loading-overlay hidden">
                        <div class="loading-overlay__spinner">
                          {% render 'icon-loading' %}
                        </div>
                      </div>
                    </div>
                  {% endfor %}
                </div>
              {%- endif -%}
            </div>
          </div>

          <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
          <p
            class="visually-hidden"
            id="shopping-cart-line-item-status"
            aria-live="polite"
            aria-hidden="true"
            role="status"
          >
            {{ 'accessibility.loading' | t }}
          </p>
        </form>
      </cart-items>

      <div class="{% if cart == empty %} is-empty{% endif %}" id="main-cart-footer" data-id="{{ section.id }}">
        <div class="cart__footer">
          <div class="cart__blocks">
            <p class="cart__blocks-title h4">{{ 'sections.cart.subtotal_title' | t }}</p>
            {% for block in section.blocks %}
              {%- case block.type -%}
                {%- when '@app' -%}
                  <div class="cart__app-blocks" {{ block.shopify_attributes }}>
                    {% render block %}
                  </div>
                {%- when 'subtotal' -%}
                  <div class="cart__blocks-content js-contents-totals" {{ block.shopify_attributes }}>
                    <div class="totals__wrapper">
                      <div class="totals">
                        <p class="totals__items-subtotal body-small">
                          {{ 'sections.cart.subtotal' | t }}
                        </p>
                        <div class="totals__items-subtotal-value body-small">
                          {{ cart.items_subtotal_price | money_with_currency }}
                        </div>
                      </div>

                      <div class="totals">
                        <p class="totals__shipping body-small">
                          {{ 'sections.cart.shipping' | t }}
                        </p>
                        <div class="totals__shipping-value body-small">
                          {{ 'sections.cart.shipping_at_checkout' | t }}
                        </div>
                      </div>

                      {%- if cart.cart_level_discount_applications.size > 0 -%}
                        <div class="discounts__wrapper">
                          <ul
                            class="discounts list-unstyled"
                            role="list"
                            aria-label="{{ 'customer.order.discount' | t }}"
                          >
                            {%- for discount in cart.cart_level_discount_applications -%}
                              <li class="discounts__discount">
                                <span class="discounts__discount-label body-small">
                                  {%- render 'icon-discount' -%}
                                  {{ discount.title }}
                                </span>
                                <span class="discounts__discount-value body-small">
                                  -
                                  {%- if settings.currency_code_enabled -%}
                                    {{ discount.total_allocated_amount | money_with_currency }}
                                  {%- else -%}
                                    {{ discount.total_allocated_amount | money }}
                                  {%- endif -%}
                                </span>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      {%- endif -%}

                      <div class="totals">
                        <p class="totals__subtotal">{{ 'sections.cart.estimated_total' | t }}</p>
                        <div class="totals__subtotal-value">
                          <span>{{ cart.total_price | money_with_currency }}</span>
                          <div class="loading-overlay hidden">
                            <div class="loading-overlay__spinner">
                              {% render 'icon-loading' %}
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                    {% if block.settings.enable_tax_info %}
                      <small class="tax-note body-small">
                        {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                          {{
                            'sections.cart.taxes_included_and_shipping_policy_html'
                            | t: link: shop.shipping_policy.url
                          }}
                        {%- elsif cart.taxes_included -%}
                          {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
                        {%- elsif shop.shipping_policy.body != blank -%}
                          {{
                            'sections.cart.taxes_and_shipping_policy_at_checkout_html'
                            | t: link: shop.shipping_policy.url
                          }}
                        {%- else -%}
                          {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                        {%- endif -%}
                      </small>
                    {% endif %}
                  </div>
                {%- when 'cart_note' -%}
                  <div {{ block.shopify_attributes }}>
                    <span class="cart__note-heading">{{- 'sections.cart.note' | t -}}</span>
                    <cart-note class="cart__note field h5">
                      <label for="Cart-note" class="visually-hidden">
                        {{- 'sections.cart.note' | t -}}
                      </label>
                      <textarea
                        class="text-area text-area--resize-vertical field__input"
                        name="note"
                        id="Cart-note"
                        placeholder="{{- 'sections.cart.note' | t -}}"
                      >{{ cart.note }}</textarea>

                      <span class="cart__note-loading">
                        {% render 'icon-loading' %}
                      </span>
                      <span class="cart__note-success">
                        {% render 'icon-success' %}
                      </span>
                    </cart-note>
                  </div>
                {%- when 'additional_text' -%}
                  <div class="cart__additional-text body-small" {{ block.shopify_attributes }}>
                    {{ block.settings.cart_additional_text }}
                  </div>
                {%- when 'buttons' -%}
                  <div class="cart__ctas" {{ block.shopify_attributes }}>
                    <noscript>
                      <button type="submit" class="cart__update-button button button--primary focus-inset" form="cart">
                        <div class="button__content">
                          <span class="button__label" data-label="{{- 'sections.cart.update' | t -}}">
                            {{- 'sections.cart.update' | t -}}
                          </span>
                        </div>
                        <span class="animated-button-circle"></span>
                      </button>
                    </noscript>

                    <button
                      type="submit"
                      class="cart__checkout-button button button--primary focus-inset"
                      name="checkout"
                      {% if cart == empty %}
                        disabled
                      {% endif %}
                      form="cart"
                    >
                      <div class="button__content">
                        <span class="button__label" data-label="{{- 'sections.cart.proceed_checkout' | t -}}">
                          {{- 'sections.cart.proceed_checkout' | t -}}
                        </span>
                      </div>
                      <span class="animated-button-circle"></span>
                    </button>

                    {%- if additional_checkout_buttons -%}
                      <div class="cart__footer-dynamic-checkout">
                        <div class="cart__dynamic-checkout-buttons additional-checkout-buttons">
                          {{ content_for_additional_checkout_buttons }}
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
              {%- endcase -%}
            {% endfor %}
          </div>
        </div>
        <div class="cart-errors" id="cart-errors"></div>
      </div>

      <div id="main-cart-shipping" data-id="{{ section.id }}" class="no-js-hidden">
        <div class="js-contents-shipping">
          {% render 'cart-shipping-slider', cart: cart %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "class": "section-cart-items",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.section-margin.header.content"
    },
    {
      "type": "select",
      "id": "margin_top",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.all.section-margin.options__1.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.section-margin.options__2.label"
        },
        {
          "value": "s",
          "label": "t:sections.all.section-margin.options__3.label"
        },
        {
          "value": "m",
          "label": "t:sections.all.section-margin.options__4.label"
        },
        {
          "value": "l",
          "label": "t:sections.all.section-margin.options__5.label"
        },
        {
          "value": "xl",
          "label": "t:sections.all.section-margin.options__6.label"
        }
      ],
      "default": "no-indent",
      "label": "t:sections.all.section-margin.margin_top.label"
    },
    {
      "type": "select",
      "id": "margin_bottom",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.all.section-margin.options__1.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.section-margin.options__2.label"
        },
        {
          "value": "s",
          "label": "t:sections.all.section-margin.options__3.label"
        },
        {
          "value": "m",
          "label": "t:sections.all.section-margin.options__4.label"
        },
        {
          "value": "l",
          "label": "t:sections.all.section-margin.options__5.label"
        },
        {
          "value": "xl",
          "label": "t:sections.all.section-margin.options__6.label"
        }
      ],
      "default": "xl",
      "label": "t:sections.all.section-margin.margin_bottom.label"
    }
  ],
  "blocks": [
    {
      "type": "subtotal",
      "name": "t:sections.main-cart-footer.blocks.subtotal.name",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_tax_info",
          "default": false,
          "label": "t:sections.main-cart-footer.blocks.subtotal.settings.enable_tax_info.label"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "t:sections.main-cart-footer.blocks.buttons.name",
      "limit": 1
    },
    {
      "type": "cart_note",
      "name": "t:sections.main-cart-footer.blocks.cart_note.name",
      "limit": 1
    },
    {
      "type": "additional_text",
      "name": "t:sections.main-cart-footer.blocks.additional_text.name",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "cart_additional_text",
          "label": "t:sections.main-cart-footer.blocks.additional_text.settings.text.label"
        }
      ]
    },
    {
      "type": "@app"
    }
  ]
}
{% endschema %}
