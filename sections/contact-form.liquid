{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {% render 'section-padding' %}
  {% render 'section-margin' %}
{%- endstyle -%}

<div class="contact-form color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding">
  <div class="container">
    {% render 'heading-group', section: section, class: 'contact-form', text_align: section.settings.text_align %}

    <div class="contact-form__inner contact-form__inner--{{ section.settings.position }} content">
      {% if section.settings.image != blank %}
        <span
          class="contact-form__overlay"
          style="--opacity-slide: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
        ></span>
        {%- capture sizes -%}
          (min-width: 1100px) 1920px, calc((100vw - 20px))
        {%- endcapture -%}
        {{
          section.settings.image
          | image_url: width: 1920
          | image_tag:
            loading: 'lazy',
            sizes: sizes,
            widths: '360, 533, 720, 940, 1066, 1200, 1400, 1600, 1800, 1920, 2000, 2200, 2400, 2600',
            class: 'contact-form__image'
        }}
      {% endif %}
      <div class="contact-form__wrapper">
        {%- if section.settings.heading_form != blank -%}
          <h2 class="contact-form__title-form {{ section.settings.heading_form_size }}">
            {{ section.settings.heading_form }}
          </h2>
        {%- endif -%}
        {%- if section.settings.text_form != blank -%}
          <p class="contact-form__text-form">
            {{ section.settings.text_form }}
          </p>
        {%- endif -%}
        {%- form 'contact', id: 'ContactForm' -%}
          {%- if form.posted_successfully? -%}
            <div class="form-status form-status-list form__message" tabindex="-1" autofocus>
              {% render 'icon-success' %}
              {{ 'templates.contact.form.post_success' | t }}
            </div>
          {%- elsif form.errors -%}
          {%- endif -%}
          <div class="field field__name">
            <input
              class="field__input focus-inset"
              autocomplete="name"
              type="text"
              dir="ltr"
              id="ContactForm-name"
              name="contact[{{ 'templates.contact.form.name' | t }}]"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              placeholder="{{- 'templates.contact.form.name' | t -}}"
            >
            <label
              class="field__label body-small"
              for="ContactForm-name"
            >
              {{- 'templates.contact.form.name' | t -}}
            </label>
          </div>
          <div class="field field--with-error">
            <input
              autocomplete="email"
              type="email"
              dir="ltr"
              id="ContactForm-email"
              class="field__input focus-inset"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
              {% endif %}
              placeholder="{{- 'templates.contact.form.email' | t -}}"
              required
            >
            <label
              class="field__label body-small"
              for="ContactForm-email"
            >
              {{- 'templates.contact.form.email' | t -}}
            </label>
            {%- if form.errors contains 'email' -%}
              <small class="contact-form__field-error" id="ContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </span>
              </small>
            {%- endif -%}
          </div>
          <div class="field">
            <input
              type="tel"
              dir="ltr"
              id="ContactForm-phone"
              class="field__input"
              autocomplete="tel"
              name="contact[{{ 'templates.contact.form.phone' | t }}]"
              pattern="[0-9\-]*"
              value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
              placeholder="{{- 'templates.contact.form.phone' | t -}}"
            >
            <label
              class="field__label body-small"
              for="ContactForm-phone"
            >
              {{- 'templates.contact.form.phone' | t -}}
            </label>
          </div>
          <div class="field">
            <textarea
              id="ContactForm-body"
              class="text-area field__input"
              name="contact[{{ 'templates.contact.form.comment' | t }}]"
              placeholder="{{- 'templates.contact.form.comment' | t -}}"
              aria-required="true"
              required
            >
              {{- form.body -}}
            </textarea>
            <label
              class="field__label body-small"
              for="ContactForm-body"
            >
              {{- 'templates.contact.form.comment' | t -}}
            </label>
          </div>
          <div class="contact-form__bottom">
            <button type="submit" class="button button--{{ section.settings.button_style }} focus-inset">
              <div class="button__content">
                <span class="button__label" data-label="{{- 'templates.contact.form.send' | t -}}">
                  {{- 'templates.contact.form.send' | t -}}
                </span>
              </div>
            </button>

            {% if section.settings.additional_text != blank %}
              <div class="contact-form__add-text body-small">
                {{- section.settings.additional_text -}}
              </div>
            {% endif %}
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

