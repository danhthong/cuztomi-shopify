<script src="{{ 'footer.js' | asset_url }}" defer="defer"></script>

{% style %}
  {% render 'section-padding' %}
  {% render 'section-margin' %}
{% endstyle %}

{%- if section.settings.show_socials
  and settings.social_twitter_link != blank
  or settings.social_facebook_link != blank
  or settings.social_pinterest_link != blank
  or settings.social_instagram_link != blank
  or settings.social_tiktok_link != blank
  or settings.social_tumblr_link != blank
  or settings.social_snapchat_link != blank
  or settings.social_youtube_link != blank
  or settings.social_vimeo_link != blank
-%}
  {% assign is_show_socials = true %}
{% else %}
  {% assign is_show_socials = false %}
{%- endif -%}

<footer class="footer{% if section.settings.animate_on_scroll %} animate-on-scroll{% endif %}">
  <div class="footer-main color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding">
    <div class="container">
      <div class="footer-main-wrapper">
        {% comment %} ----- FOOTER BLOCKS ----- {% endcomment %}
        {%- if section.blocks.size > 0 -%}
          <div class="footer-blocks footer-blocks--justify-{{ section.settings.blocks_alignment }}{% if section.settings.animate_on_scroll %} animate-on-scroll{% endif %}">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                  {% comment %} ----- FOOTER MENU BLOCK link_list ----- {% endcomment %}
                {%- when 'link_list' -%}
                  {%- if block.type == 'link_list'
                    and block.settings.heading != blank
                    and block.settings.menu != blank
                    and block.id != 'link_list_policies'
                  -%}
                    <div class="accordion">
                      <details
                        {% if block.settings.default_open %}
                          open
                        {% endif %}
                      >
                        <summary>
                          <h4 class="accordion__heading body-2">
                            {{ block.settings.heading | escape }}
                          </h2>
                          {% render 'icon-caret' %}
                        </summary>
                        {%- if block.settings.menu != blank -%}
                          <ul class="footer-block__details-content list-unstyled">
                            {%- for link in block.settings.menu.links -%}
                              <li>
                                <a
                                  href="{{ link.url }}"
                                  {% if settings.links_blank and link.type == 'http_link' %}
                                    target="_blank"
                                  {% endif %}
                                  class="list-menu__item body-normal focus-inset list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
                                >
                                  <span>{{ link.title }}</span>
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                      </details>
                    </div>

                    <div
                      class="footer-block footer-menu-block"
                      {{ block.shopify_attributes }}
                    >
                      <h4 class="footer-menu-block__heading body-2">
                        {{- block.settings.heading | escape -}}
                      </h2>

                      <ul class="footer-menu-block-list list-unstyled">
                        {%- for link in block.settings.menu.links -%}
                          <li class="footer-menu-block-list__item">
                            <a
                              href="{{ link.url }}"
                              {% if settings.links_blank and link.type == 'http_link' %}
                                target="_blank"
                              {% endif %}
                              class="footer-menu-block-list__link body-normal focus-inset {% if link.active %} footer-menu-block-list__link--active {% endif %}"
                            >
                              <span class="body-normal">{{- link.title }}</span>
                              {% render 'icon-arrow-small' %}
                            </a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  {%- endif -%}
                {% comment %} ----- FOOTER INFO BLOCK info ----- {% endcomment %}
                {% when 'info' %}
                  <div
                    class="footer-block footer-info-block"
                    {{ block.shopify_attributes }}
                  >
                    {%- if block.settings.heading != blank %}
                      <h4 class="footer-info-block__heading body-2">
                        {{- block.settings.heading -}}
                      </h3>
                    {%- endif -%}
                    {%- if block.settings.description != blank -%}
                      <div class="footer-info-block__description body-normal">
                        {{- block.settings.description -}}
                      </div>
                    {%- endif -%}
                    {% comment %} ----- FOOTER SOCIALS ----- {% endcomment %}
                    {%- if is_show_socials == true -%}
                      <div class="footer-socials">
                        <ul
                          class="footer-socials-list list-social list-unstyled"
                          role="list"
                        >
                          {%- if settings.social_twitter_link != blank -%}
                            <li class="footer-socials-list__item list-social__item">
                              <a
                                href="{{ settings.social_twitter_link }}"
                                class="link list-social__link focus-inset"

                                {%- if settings.links_blank -%}
                                  target="_blank"
                                {%- endif -%}
                              >
                                {%- render 'icon-twitter' -%}
                                <span class="visually-hidden">
                                  {{- 'general.social.links.twitter' | t -}}
                                </span>
                              </a>
                            </li>
                          {%- endif -%}
                          {%- if settings.social_facebook_link != blank -%}
