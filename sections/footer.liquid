{{- 'section-footer.css' | asset_url | stylesheet_tag -}}
{{- 'component-accordion.css' | asset_url | stylesheet_tag -}}
{{- 'component-list-menu.css' | asset_url | stylesheet_tag -}}
{{- 'component-list-payment.css' | asset_url | stylesheet_tag -}}
{{- 'component-list-social.css' | asset_url | stylesheet_tag -}}
<script src="{{ 'footer.js' | asset_url }}" defer="defer"></script>

{% style %}
  {% render 'section-padding' %}
  {% render 'section-margin' %}
{% endstyle %}

{%- if section.settings.show_socials
  and settings.social_twitter_link != blank
  or settings.social_facebook_link != blank
  or settings.social_pinterest_link != blank
  or settings.social_instagram_link != blank
  or settings.social_tiktok_link != blank
  or settings.social_tumblr_link != blank
  or settings.social_snapchat_link != blank
  or settings.social_youtube_link != blank
  or settings.social_vimeo_link != blank
-%}
  {% assign is_show_socials = true %}
{% else %}
  {% assign is_show_socials = false %}
{%- endif -%}

<footer class="footer{% if section.settings.animate_on_scroll %} animate-on-scroll{% endif %}">
  <div class="footer-main color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding">
    <div class="container">
      <div class="footer-main-wrapper">
        <div class="footer-main-head footer-main-head--align-{{ section.settings.head_alignment }}">
          {% comment %} ----- FOOTER LOGO ----- {% endcomment %}
          {% if section.settings.show_logo %}
            <a
              href="{{ routes.root_url }}"
              class="footer-logo focus-inset{% if section.settings.logo_dm != blank %} has-dm-logo{% endif %}"
            >
              {%- if section.settings.logo != blank -%}
                {%- liquid
                  assign logo_img_loading = 'lazy'

                  if section.index == 1
                    assign logo_img_loading = 'eager'
                  endif

                  assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio
                  assign logo_alt = section.settings.logo.alt | default: shop.name | escape
                  assign image_size_2x = section.settings.logo_width | times: 2
                -%}
                {%- capture srcset -%}
                  {{ section.settings.logo | image_url: width: section.settings.logo_width }}, {{ section.settings.logo | image_url: width: image_size_2x }} 2x
                {%- endcapture -%}
                {{
                  section.settings.logo
                  | image_url: width: section.settings.logo_width
                  | image_tag:
                    class: 'footer-logo__image footer-logo__image--light-mode',
                    srcset: srcset,
                    height: logo_height,
                    width: section.settings.logo_width,
                    alt: logo_alt,
                    loading: logo_img_loading
                }}
                {%- if section.settings.logo_dm != blank -%}
                  {%- capture srcset -%}
                    {{ section.settings.logo_dm | image_url: width: section.settings.logo_width }}, {{ section.settings.logo_dm | image_url: width: image_size_2x }} 2x
                  {%- endcapture -%}
                  {{
                    section.settings.logo_dm
                    | image_url: width: section.settings.logo_width
                    | image_tag:
                      class: 'footer-logo__image footer-logo__image--dark-mode',
                      srcset: srcset,
                      height: logo_height,
                      width: section.settings.logo_width,
                      alt: logo_alt,
                      loading: logo_img_loading
                  }}
                {%- endif -%}
              {%- else -%}
                <span class="footer-logo__text h3">{{ shop.name }}</span>
              {%- endif -%}
            </a>
          {% endif %}
          {% comment %} ----- FOOTER MAIN TEXT ----- {% endcomment %}
          {% if section.settings.main_text %}
            <div class="footer-main-text body-small">{{ section.settings.main_text }}</div>
          {% endif %}
          {% comment %} ----- FOOTER SOCIALS ----- {% endcomment %}
          {%- if is_show_socials == true -%}
            <div class="footer-socials">
              <ul
                class="footer-socials-list list-social list-unstyled"
                role="list"
              >
                {%- if settings.social_twitter_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_twitter_link }}"
                      class="link list-social__link focus-inset"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-twitter' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.twitter' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_facebook_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_facebook_link }}"
                      class="link link--text list-social__link focus-inset"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-facebook' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.facebook' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_pinterest_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_pinterest_link }}"
                      class="link link--text list-social__link"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-pinterest' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.pinterest' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_instagram_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_instagram_link }}"
                      class="link link--text list-social__link"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-instagram' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.instagram' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_tiktok_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_tiktok_link }}"
                      class="link link--text list-social__link"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-tiktok' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.tiktok' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_tumblr_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_tumblr_link }}"
                      class="link link--text list-social__link"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-tumblr' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.tumblr' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_snapchat_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_snapchat_link }}"
                      class="link link--text list-social__link"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-snapchat' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.snapchat' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_youtube_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_youtube_link }}"
                      class="link link--text list-social__link"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-youtube' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.youtube' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
                {%- if settings.social_vimeo_link != blank -%}
                  <li class="footer-socials-list__item list-social__item">
                    <a
                      href="{{ settings.social_vimeo_link }}"
                      class="link link--text list-social__link"

                      {%- if settings.links_blank -%}
                        target="_blank"
                      {%- endif -%}
                    >
                      {%- render 'icon-vimeo' -%}
                      <span class="visually-hidden">
                        {{- 'general.social.links.vimeo' | t -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </div>
          {%- endif -%}
        </div>
        {% comment %} ----- FOOTER BLOCKS ----- {% endcomment %}
        {%- if section.blocks.size > 0 -%}
          <div class="footer-blocks footer-blocks--justify-{{ section.settings.blocks_alignment }}{% if section.settings.animate_on_scroll %} animate-on-scroll{% endif %}">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                  {% comment %} ----- FOOTER MENU BLOCK link_list ----- {% endcomment %}
                {%- when 'link_list' -%}
                  {%- if block.type == 'link_list'
                    and block.settings.heading != blank
                    and block.settings.menu != blank
                  -%}
                    <div class="accordion">
                      <details
                        {% if block.settings.default_open %}
                          open
                        {% endif %}
                      >
                        <summary>
                          <h2 class="accordion__heading body-large">
                            {{ block.settings.heading | escape }}
                          </h2>
                          {% render 'icon-caret' %}
                        </summary>
                        {%- if block.settings.menu != blank -%}
                          <ul class="footer-block__details-content list-unstyled">
                            {%- for link in block.settings.menu.links -%}
                              <li>
                                <a
                                  href="{{ link.url }}"
                                  {% if settings.links_blank and link.type == 'http_link' %}
                                    target="_blank"
                                  {% endif %}
                                  class="list-menu__item body-normal focus-inset list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
                                >
                                  <span>{{ link.title }}</span>
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                      </details>
                    </div>

                    <div
                      class="footer-block footer-menu-block"
                      {{ block.shopify_attributes }}
                    >
                      <h2 class="footer-menu-block__heading body-small">
                        {{- block.settings.heading | escape -}}
                      </h2>

                      <ul class="footer-menu-block-list list-unstyled">
                        {%- for link in block.settings.menu.links -%}
                          <li class="footer-menu-block-list__item">
                            <a
                              href="{{ link.url }}"
                              {% if settings.links_blank and link.type == 'http_link' %}
                                target="_blank"
                              {% endif %}
                              class="footer-menu-block-list__link body-normal focus-inset {% if link.active %} footer-menu-block-list__link--active {% endif %}"
                            >
                              <span class="body-normal">{{- link.title }}</span>
                              {% render 'icon-arrow-small' %}
                            </a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  {%- endif -%}
                  {% comment %} ----- FOOTER SUBSCRIBE BLOCK subscribe ----- {% endcomment %}
                {% when 'subscribe' %}
                  <div
                    class="footer-block footer-subscribe-block"
                    {{ block.shopify_attributes }}
                  >
                    {% form 'customer', class: 'footer-subscribe-form' %}
                      {% if block.settings.heading != blank %}
                        <h2 class="footer-subscribe-form__heading h4 footer-subscribe-form__heading--font-{{ block.settings.heading_font }}">
                          {{ block.settings.heading }}
                        </h2>
                      {% endif %}
                      {% if block.settings.additional_text != blank %}
                        <div class="footer-subscribe-form__text body-small">{{ block.settings.additional_text }}</div>
                      {% endif %}
                      <div class="footer-subscribe-form__inner">
                        <input
                          type="hidden"
                          name="contact[tags]"
                          value="newsletter"
                        >
                        <div class="footer-subscribe-form__input-wrapper">
                          <input
                            id="NewsletterForm--{{ section.id }}"
                            type="email"
                            dir="ltr"
                            name="contact[email]"
                            display:
                            block;
                            class="footer-subscribe-form__input body-normal"
                            value="{{ form.email }}"
                            aria-required="true"
                            autocorrect="off"
                            autocapitalize="off"
                            autocomplete="email"
                            pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
                            {% if form.errors %}
                              autofocus
                              aria-invalid="true"
                              aria-describedby="Newsletter-error--{{ section.id }}"
                            {% elsif form.posted_successfully? %}
                              aria-describedby="Newsletter-success--{{ section.id }}"
                            {% endif %}
                            placeholder="{{ 'newsletter.label' | t }}"
                            required
                          >
                          <label class="visually-hidden" for="NewsletterForm--{{ section.id }}">
                            {{- 'newsletter.label' | t -}}
                          </label>
                        </div>
                        <button
                          type="submit"
                          class="button button--primary"
                        >
                          <div class="button__content">
                            <span class="button__label" data-label="{{ 'newsletter.button_label' | t }}">
                              {{ 'newsletter.button_label' | t }}
                            </span>
                            {% if block.settings.button_arrow %}
                              <div class="button__icons">
                                <span class="button__icon">
                                  {% render 'icon-button-arrow' %}
                                </span>
                                <span class="button__icon button__icon--2">
                                  {% render 'icon-button-arrow' %}
                                </span>
                              </div>
                            {% endif %}
                          </div>
                          <span class="animated-button-circle"></span>
                        </button>
                      </div>
                      {%- if form.errors -%}
                        <small
                          class="footer-subscribe-form__message footer-subscribe-form__message--error body-normal"
                          id="Newsletter-error--{{ section.id }}"
                        >
                          {%- render 'icon-error' -%}
                          {{- form.errors.translated_fields.email | capitalize }}
                          {{ form.errors.messages.email -}}
                        </small>
                      {%- endif -%}
                      {%- if form.posted_successfully? -%}
                        <small
                          class="footer-subscribe-form__message footer-subscribe-form__message--success"
                          id="Newsletter-success--{{ section.id }}"
                          tabindex="-1"
                          autofocus
                        >
                          {% render 'icon-success' -%}
                          {{- 'newsletter.success' | t }}
                        </small>
                      {%- endif -%}
                      {% if block.settings.privacy_policy_consent %}
                        <div class="footer-subscribe-form-checkbox">
                          <input
                            type="checkbox"
                            name="footer_newsletter_checkbox"
                            id="footer_newsletter_checkbox"
                            required
                            oninvalid="this.classList.add('is-invalid')"
                            onchange="this.classList.remove('is-invalid')"
                          >
                          <label
                            class="footer-subscribe-form-checkbox__label"
                            for="footer_newsletter_checkbox"
                          >
                            <span class="footer-subscribe-form-checkbox__label-text body-small">
                              {{ 'sections.footer.accept_terms' | t }}
                              <a
                                href="{{ shop.privacy_policy.url }}"
                                target="_blank"
                              >
                                {{- shop.privacy_policy.title -}}
                              </a>
                            </span>
                          </label>
                          <p class="footer-subscribe-form-checkbox__error body-xs">
                            {{ 'sections.footer.checkbox_error' | t }}
                          </p>
                        </div>
                      {% endif %}
                    {% endform %}
                  </div>
                  {% comment %} ----- FOOTER INFO BLOCK info ----- {% endcomment %}
                {% when 'info' %}
                  <div
                    class="footer-block footer-info-block"
                    {{ block.shopify_attributes }}
                  >
                    {%- if block.settings.heading != blank %}
                      <h3 class="footer-info-block__heading body-small">
                        {{- block.settings.heading -}}
                      </h3>
                    {%- endif -%}
                    {%- if block.settings.description != blank -%}
                      <div class="footer-info-block__description body-normal">
                        {{- block.settings.description -}}
                      </div>
                    {%- endif -%}
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="footer-bottom">
      <div class="footer-bottom-container">
        <div class="footer-bottom-container__main">
          {% comment %} ----- COPYRIGHT ----- {% endcomment %}
          {%- if section.settings.enable_copyright -%}
            <div class="footer-copyright">
              <span class="footer-copyright__content body-small">
                &copy;
                {% if section.settings.enable_copyright_date %}
                  {{ 'now' | date: '%Y' }}
                {% endif %}
                {{ shop.name | link_to: routes.root_url }}.
              </span>
              <span class="footer-copyright__content body-small">
                {{- powered_by_link -}}
              </span>
            </div>
          {%- endif -%}
          {% comment %} ----- LOCALIZATION (LANGUAGE AND COUNTRY) ----- {% endcomment %}
          {%- if section.settings.enable_country_selector or section.settings.enable_language_selector -%}
            <div class="footer-localization">
              {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
                <noscript>
                  {%- form 'localization', id: 'FooterCountryFormNoScript', class: 'localization-form' -%}
                    <div class="localization-form__select">
                      <select
                        class="localization-selector link"
                        name="country_code"
                        aria-labelledby="FooterCountryLabelNoScript"
                      >
                        {%- for country in localization.available_countries -%}
                          <option
                            value="{{ country.iso_code }}"
                            {%- if country.iso_code == localization.country.iso_code %}
                              selected
                            {% endif %}
                          >
                            {{ country.name }} (
                            {{- country.currency.iso_code }}
                            {{ country.currency.symbol }})
                          </option>
                        {%- endfor -%}
                      </select>
                      {% render 'icon-caret' %}
                    </div>
                    <button
                      type="submit"
                      class="button button--primary focus-inset"
                    >
                      <div class="button__content">
                        <span class="button__label" data-label="{{ 'localization.update_country' | t }}">
                          {{ 'localization.update_country' | t }}
                        </span>
                      </div>
                    </button>
                  {%- endform -%}
                </noscript>
                <localization-form>
                  {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
                    <div class="no-js-hidden">
                      <div class="disclosure">
                        <button
                          type="button"
                          class="footer-localization-button disclosure__button localization-form__select localization-selector body-small link link--text focus-inset"
                          aria-expanded="false"
                          aria-controls="FooterCountryList"
                        >
                          <span class="currency-country">
                            {{ localization.country.name }} (
                            {{- localization.country.currency.iso_code }}
                            {{ localization.country.currency.symbol -}}
                            )
                          </span>
                          {% render 'icon-caret' -%}
                        </button>
                        <ul
                          id="FooterCountryList"
                          role="list"
                          class="disclosure__list list-unstyled"
                          hidden
                        >
                          {%- for country in localization.available_countries -%}
                            <li class="disclosure__item" tabindex="-1">
                              <a
                                class="link link--text disclosure__link caption-large{% if country.iso_code == localization.country.iso_code %} disclosure__link--active{% endif %} focus-inset"
                                href="#"
                                {% if country.iso_code == localization.country.iso_code %}
                                  aria-current="true"
                                {% endif %}
                                data-value="{{ country.iso_code }}"
                              >
                                <span>
                                  {{ country.name }}
                                  <span>
                                    (
                                    {{- country.currency.iso_code }}
                                    {{ country.currency.symbol -}}
                                    )
                                  </span>
                                </span>
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </div>
                      <input
                        type="hidden"
                        name="country_code"
                        value="{{ localization.country.iso_code }}"
                      >
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}

              {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
                <noscript>
                  {%- form 'localization', id: 'FooterLanguageFormNoScript', class: 'localization-form' -%}
                    <div class="localization-form__select">
                      <select
                        class="localization-selector link"
                        name="locale_code"
                        aria-labelledby="FooterLanguageLabelNoScript"
                      >
                        {%- for language in localization.available_languages -%}
                          <option
                            value="{{ language.iso_code }}"
                            lang="{{ language.iso_code }}"
                            {%- if language.iso_code == localization.language.iso_code %}
                              selected
                            {% endif %}
                          >
                            {{ language.endonym_name | capitalize }}
                          </option>
                        {%- endfor -%}
                      </select>
                      {% render 'icon-caret' %}
                    </div>
                    <button
                      type="submit"
                      class="button button--primary focus-inset"
                    >
                      <div class="button__content">
                        <span class="button__label" data-label="{{ 'localization.update_language' | t }}">
                          {{ 'localization.update_language' | t }}
                        </span>
                      </div>
                    </button>
                  {%- endform -%}
                </noscript>
                <localization-form>
                  {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
                    <div class="no-js-hidden">
                      <div class="disclosure">
                        <button
                          type="button"
                          class="footer-localization-button disclosure__button localization-form__select localization-selector body-small link link--text focus-inset"
                          aria-expanded="false"
                          aria-controls="FooterLanguageList"
                        >
                          <span class="value">
                            {{- localization.language.endonym_name | capitalize }}
                          </span>
                          {% render 'icon-caret' -%}
                        </button>
                        <ul
                          id="FooterLanguageList"
                          role="list"
                          class="disclosure__list list-unstyled"
                          hidden
                        >
                          {%- for language in localization.available_languages -%}
                            <li class="disclosure__item" tabindex="-1">
                              <a
                                class="link link--text disclosure__link caption-large{% if language.iso_code == localization.language.iso_code %} disclosure__link--active{% endif %} focus-inset"
                                href="#"
                                hreflang="{{ language.iso_code }}"
                                lang="{{ language.iso_code }}"
                                {% if language.iso_code == localization.language.iso_code %}
                                  aria-current="true"
                                {% endif %}
                                data-value="{{ language.iso_code }}"
                              >
                                <span>
                                  {{ language.endonym_name | capitalize }}
                                </span>
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </div>
                      <input
                        type="hidden"
                        name="locale_code"
                        value="{{ localization.language.iso_code }}"
                      >
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}
            </div>
          {%- endif -%}
          {% comment %} ----- POLICIES ----- {% endcomment %}
          {%- if section.settings.show_policy -%}
            <ul class="footer-policies list-unstyled">
              {%- for policy in shop.policies -%}
                {%- if policy != blank -%}
                  <li class="footer-policies__item">
                    <a href="{{ policy.url }}" class="footer-policies__link focus-inset body-small">
                      {{ policy.title }}
                    </a>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
        {% comment %} ----- PAYMENT METHODS ----- {% endcomment %}
        {%- if section.settings.payment_enable -%}
          <ul class="list-payment list-unstyled" role="list">
            {%- for type in shop.enabled_payment_types -%}
              <li class="list-payment__item">
                {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
      {% comment %} ----- FOLLOW ON SHOP ----- {% endcomment %}
      {%- if shop.features.follow_on_shop? and section.settings.enable_follow_on_shop -%}
        <div class="footer-follow-on-shop">
          {{ shop | login_button: action: 'follow' }}
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "max_blocks": 9,
  "settings": [
