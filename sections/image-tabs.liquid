{{ 'section-image-tabs.css' | asset_url | stylesheet_tag }}
<script src="{{ 'image-tabs.js' | asset_url }}" defer="defer"></script>

{% style %}
  {% render 'section-margin' %}
  {% render 'section-padding' %}
{% endstyle %}

<div class="image-tabs color-{{ section.settings.main_color_scheme }} background section-{{ section.id }}-padding">
  <div class="container">
    {% render 'heading-group', section: section, class: 'image-tabs', text_align: section.settings.text_align %}

    <div class="image-tabs__wrapper content">
      <div class="image-tabs__media{% if section.blocks.size > 1 %} swiper swiper--image-tabs{% endif %}">
        <div class="{% if section.blocks.size > 1 %}swiper-wrapper{% endif %}">
          {% for block in section.blocks %}
            <div
              class="image-tabs__image{% if forloop.index == 1 %} image-tabs__image--active{% endif %}{% if section.blocks.size > 1 %} swiper-slide{% endif %}"
              data-id="{{ block.id }}"
              data-image-tabs="#image-tabs-{{ forloop.index }}"
              data-id="{{ block.id }}"
              style="--focal_point: {{ block.settings.image.presentation.focal_point }};"
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.image != blank -%}
                {%- capture sizes -%}
                  (min-width: 990px) 50vw, 100vw
                {%- endcapture -%}
                {%- capture style -%}
                  object-fit: {{ section.settings.image_fit }};
                {%- endcapture -%}
                {%- assign widths = '360, 535, 720, 940, 1070, 1200, 1400, 1600, 1800, 1980' -%}
                {% liquid
                  assign fetch_priority = 'auto'
                  if section.index == 1 and forloop.first
                    assign fetch_priority = 'high'
                  endif
                %}
                {{
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag:
                    loading: 'lazy',
                    sizes: sizes,
                    widths: widths,
                    style: style,
                    fetchpriority: fetch_priority
                }}
              {%- else -%}
                {% assign block_index = forloop.index | modulo: 3 | plus: 1 %}
                {{
                  'hero-apparel-'
                  | append: block_index
                  | placeholder_svg_tag: 'placeholder-svg placeholder-svg--filled'
                }}
              {%- endif -%}
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="image-tabs__content {{ section.settings.desktop_order }}">
        <div class="image-tabs__content-blocks{% if section.blocks.size > 1 %} swiper swiper--content-tabs{% endif %}">
          <div class="image-tabs__content-blocks-wrapper">
            {% for block in section.blocks %}
              <div
                class="image-tabs__block{% if forloop.index == 1 %} image-tabs__block--active{% endif %}{% if section.blocks.size > 1 %} swiper-slide{% endif %}"
                data-image-tabs="#image-tabs-{{ forloop.index }}"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.icon != blank or block.settings.icon_dark != blank -%}
                  <div class="image-tabs__block-icon">
                    {%- if block.settings.icon != blank -%}
                      {% liquid
                        assign calc_ratio = 1
                        if block.settings.icon.aspect_ratio > 1
                          assign calc_ratio = block.settings.icon.aspect_ratio | round: 2
                        endif
                      %}
                      {%- capture sizes_1 -%}
                        calc(100px * {{ calc_ratio }})
                      {%- endcapture -%}
                      {{
                        block.settings.icon
                        | image_url: width: block.settings.icon.width
                        | image_tag:
                          loading: 'lazy',
                          sizes: sizes_1,
                          widths: '70, 100, 140, 210, 300',
                          class: 'image-tabs__block-icon-item'
                      }}
                    {%- endif -%}

                    {%- if block.settings.icon_dark != blank -%}
                      {% liquid
                        assign calc_ratio = 1
                        if block.settings.icon.aspect_ratio > 1
                          assign calc_ratio = block.settings.icon.aspect_ratio
                        endif
                      %}
                      {%- capture sizes_2 -%}
                        calc(100px * {{ calc_ratio }})
                      {%- endcapture -%}
                      {{
                        block.settings.icon_dark
                        | image_url: width: block.settings.icon_dark.width
                        | image_tag:
                          loading: 'lazy',
                          sizes: sizes_2,
                          widths: '70, 100, 140, 210, 300',
                          class: 'image-tabs__block-icon-item'
                      }}
                    {%- endif -%}
                  </div>
                {%- endif -%}

                {%- if block.settings.heading != blank
                  or block.settings.text != blank
                  or block.settings.button_label != blank
                -%}
                  <div class="image-tabs__block-right">
                    {%- if block.settings.heading != blank or block.settings.text != blank -%}
                      <div class="image-tabs__block-info">
                        {% if block.settings.heading != blank %}
                          <h4 class="image-tabs__block-heading h3">
                            {{- block.settings.heading | escape -}}
                          </h4>
                        {% endif %}
                        {%- if block.settings.text != blank -%}
                          <div class="image-tabs__block-text">
                            {{- block.settings.text -}}
                          </div>
                        {%- endif -%}
                      </div>
                    {%- endif -%}

                    {%- if block.settings.show_button and block.settings.button_label != blank -%}
                      <a
                        {% if block.settings.button_link != blank %}
                          href="{{ block.settings.button_link }}"
                        {% endif %}
                        class="button button--underline image-tabs__block-button focus-inset"
                        {% if block.settings.button_link == blank %}
                          aria-disabled="true"
                        {% endif %}
                        {% if settings.links_blank and block.settings.button_link == 'external_link' %}
                          target="_blank"
                        {% endif %}
                      >
                        <span>{{- block.settings.button_label | escape -}}</span>
                      </a>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>
            {% endfor %}
          </div>

          {%- if section.blocks.size > 1 -%}
            <div class="image-tabs__pagination no-js-hidden">
              <div class="swiper-pagination"></div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

