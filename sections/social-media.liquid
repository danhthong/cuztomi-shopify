{{ 'section-social-media.css' | asset_url | stylesheet_tag }}
<script src="{{ 'social-media.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  {% render 'section-padding' %}
  {% render 'section-margin' %}
{%- endstyle -%}

<div
  class="social-media color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding{% if section.settings.animate_on_scroll %} animate-on-scroll{% endif %}"
>
  <div class="container">
    {% render 'heading-group',
      section: section,
      class: 'social-media__header',
      text_align: section.settings.text_align
    %}

    <div class="content social-media-content social-media-content--{{ section.settings.layout }}{% if section.settings.main_text == blank %} social-media-content--no-text{% endif %}">
      {%- if section.blocks.size > 0 -%}
        <div
          class="social-media-slider swiper"
          data-stop-on-hover="{{ section.settings.slider_stop_on_hover }}"
          data-speed="{{ section.settings.slider_speed }}"
          data-social-slider-id="{{ section.id }}"
          data-slides-per-view="{{ section.settings.slides_per_view }}"
          style="--sm-slider-slides-per-view: {{ section.settings.slides_per_view }}"
        >
          <div
            class="social-media-slider-wrapper swiper-wrapper social-slider-{{ section.id }}"
            style="--sm-slider-slides-per-view: {{ section.settings.slides_per_view }}"
          >
            {%- for block in section.blocks -%}
              <div
                class="social-media-slide swiper-slide social-media-slide--{{ section.settings.aspect_ratio }}"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.image != blank -%}
                  {%- liquid
                    assign object_fit = 'object-fit: ' | append: section.settings.object_fit

                    assign image_loading = 'lazy'

                    if section.index == 1 and forloop.index <= 4
                      assign image_loading = 'eager'
                    endif

                    if section.settings.aspect_ratio == 'landscape'
                      assign settings_aspect_ratio = 1.77
                    elsif section.settings.aspect_ratio == 'portrait'
                      assign settings_aspect_ratio = 0.8
                    else
                      assign settings_aspect_ratio = 1
                    endif

                    assign calc_ratio = 1
                    if block.settings.image.aspect_ratio > settings_aspect_ratio
                      assign calc_ratio = block.settings.image.aspect_ratio | divided_by: settings_aspect_ratio | round: 2
                    endif
                  -%}
                  {%- capture image_sizes -%}
                    {%- if section.settings.slides_per_view == 5 -%}
                      (min-width: 990px) calc(77px * {{ calc_ratio }}), (min-width: 750px) calc(64px * {{ calc_ratio }}), (min-width: 576px) calc(77px * {{ calc_ratio }}), calc(17vw * {{ calc_ratio }})
                    {%- elsif section.settings.slides_per_view == 4 -%}
                      (min-width: 990px) calc(98px * {{ calc_ratio }}), (min-width: 750px) calc(82px * {{ calc_ratio }}), (min-width: 576px) calc(98px * {{ calc_ratio }}), calc(22vw * {{ calc_ratio }})
                    {%- elsif section.settings.slides_per_view == 3 -%}
                      (min-width: 990px) calc(134px * {{ calc_ratio }}), (min-width: 750px) calc(112px * {{ calc_ratio }}), (min-width: 576px) calc(134px * {{ calc_ratio }}), calc(29vw * {{ calc_ratio }})
                    {%- else -%}
                      (min-width: 990px) calc(204px * {{ calc_ratio }}), (min-width: 750px) calc(171px * {{ calc_ratio }}), (min-width: 576px) calc(204px * {{ calc_ratio }}), calc(45vw * {{ calc_ratio }})
                    {%- endif -%}
                  {%- endcapture -%}
                  {{
                    block.settings.image
                    | image_url: width: 3840
                    | image_tag:
                      width: block.settings.image.width,
                      height: block.settings.image.height,
                      sizes: image_sizes,
                      widths: '150, 171, 204, 375, 420, 550, 750, 1000, 1280, 1500, 1780, 2560, 3000, 3840',
                      style: object_fit,
                      loading: image_loading
                  }}
                {%- else -%}
                  {% assign number_placeholder = forloop.index | modulo: 3 | plus: 1 %}
                  {{
                    'hero-apparel-'
                    | append: number_placeholder
                    | placeholder_svg_tag: 'placeholder-svg placeholder-svg--filled'
                  }}
                {%- endif -%}
              </div>
            {%- endfor -%}
            {%- for block in section.blocks -%}
              <div
                class="social-media-slide swiper-slide social-media-slide--{{ section.settings.aspect_ratio }}"
                {{ block.shopify_attributes }}
              >
                {% if block.settings.image != blank %}
                  {%- liquid
                    assign object_fit = 'object-fit: ' | append: section.settings.object_fit

                    if section.settings.aspect_ratio == 'landscape'
                      assign settings_aspect_ratio = 1.77
                    elsif section.settings.aspect_ratio == 'portrait'
                      assign settings_aspect_ratio = 0.8
                    else
                      assign settings_aspect_ratio = 1
                    endif

                    assign calc_ratio = 1
                    if block.settings.image.aspect_ratio > settings_aspect_ratio
                      assign calc_ratio = block.settings.image.aspect_ratio | divided_by: settings_aspect_ratio | round: 2
                    endif
                  -%}
                  {%- capture image_sizes -%}
                    {%- if section.settings.slides_per_view == 5 -%}
                      (min-width: 990px) calc(77px * {{ calc_ratio }}), (min-width: 750px) calc(64px * {{ calc_ratio }}), (min-width: 576px) calc(77px * {{ calc_ratio }}), calc(17vw * {{ calc_ratio }})
                    {%- elsif section.settings.slides_per_view == 4 -%}
                      (min-width: 990px) calc(98px * {{ calc_ratio }}), (min-width: 750px) calc(82px * {{ calc_ratio }}), (min-width: 576px) calc(98px * {{ calc_ratio }}), calc(22vw * {{ calc_ratio }})
                    {%- elsif section.settings.slides_per_view == 3 -%}
                      (min-width: 990px) calc(134px * {{ calc_ratio }}), (min-width: 750px) calc(112px * {{ calc_ratio }}), (min-width: 576px) calc(134px * {{ calc_ratio }}), calc(29vw * {{ calc_ratio }})
                    {%- else -%}
                      (min-width: 990px) calc(204px * {{ calc_ratio }}), (min-width: 750px) calc(171px * {{ calc_ratio }}), (min-width: 576px) calc(204px * {{ calc_ratio }}), calc(45vw * {{ calc_ratio }})
                    {%- endif -%}
                  {%- endcapture -%}
                  {{
                    block.settings.image
                    | image_url: width: 3840
                    | image_tag:
                      width: block.settings.image.width,
                      height: block.settings.image.height,
                      sizes: image_sizes,
                      widths: '150, 171, 204, 375, 420, 550, 750, 1000, 1280, 1500, 1780, 2560, 3000, 3840',
                      style: object_fit,
                      loading: 'lazy'
                  }}
                {%- else -%}
                  {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--filled' }}
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.main_text != blank -%}
        <p class="social-media-content__main-text social-media-content__main-text--font-{{ section.settings.main_text_font }} {{ section.settings.main_text_size }}{% if section.settings.link_arrow == true %} social-media-content__main-text--with-link-arrow{% endif %}">
          {{- section.settings.main_text -}}
        </p>
      {%- endif -%}
    </div>
  </div>
</div>

