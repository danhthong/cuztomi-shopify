{{ 'section-image-multicolumn.css' | asset_url | stylesheet_tag }}
<script src="{{ 'image-multicolumn.js' | asset_url }}" defer="defer"></script>

{% style %}
  {% render 'section-padding' %}
  {% render 'section-margin' %}
{% endstyle %}

{%- style -%}
  .section-{{ section.id }}-padding .image-multicolumn__list {
    --row_gap: {{ section.settings.row_gap }}rem;
    --column_gap: {{ section.settings.column_gap }}rem;
  }
{%- endstyle -%}

<div class="image-multicolumn color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding{% if section.settings.mobile_slider_layout_type == 'visible_overflow' %} image-multicolumn--visible-overflow{% endif %}">
  <div class="container">
    {% render 'heading-group', section: section, class: 'image-multicolumn', text_align: section.settings.text_align %}

    <div class="image-multicolumn__wrapper content {% if section.settings.swipe_on_mobile and section.blocks.size >= 1 %}swiper--image-multicolumn{% if section.settings.mobile_slider_layout_type == 'visible_overflow' %} swiper--image-multicolumn--visible-overflow{% endif %}{% endif %}">
      <div class="image-multicolumn__list image-multicolumn__list--{{ section.settings.multicolumn_to_show }} {% if section.settings.swipe_on_mobile and section.blocks.size >= 1 %} swiper-wrapper--image-multicolumn{% endif %}">
        {%- for block in section.blocks -%}
          <div
            class="image-multicolumn-block"
            {{ block.shopify_attributes }}
          >
            {%- if block.settings.block_subheading != blank
              or block.settings.block_heading != blank
              or block.settings.block_description != blank
            -%}
              <div class="image-multicolumn-block__info">
                <div class="image-multicolumn-block__info-titles titles {% if block.settings.text_align %} titles--{{ block.settings.text_align }} {% endif %}">
                  {%- if block.settings.block_subheading != blank -%}
                    <div class="image-multicolumn-block__info-subtitle subtitle">
                      {{- block.settings.block_subheading -}}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.block_heading != blank -%}
                    <h3
                      class="image-multicolumn-block__info-title size--h3 title"
                      data-content="{{ section.settings.heading | escape }}"
                    >
                      {{- block.settings.block_heading -}}
                    </h3>
                  {%- endif -%}
                </div>

                {%- if block.settings.block_description != blank -%}
                  <div class="image-multicolumn-block__info-description description body-large {% if block.settings.text_align %} description--{{ block.settings.text_align }} {% endif %}">
                    {{- block.settings.block_description -}}
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}

            <div class="image-multicolumn-card image-multicolumn-card__{{ section.settings.image_ratio }} color-{{ block.settings.color_scheme }} content image-multicolumn-card--button-{{ block.settings.button_alignment }}{% if block.settings.image != blank %} image-multicolumn-card--without-bg{% endif %}{% if block.settings.button_as_cursor %} image-multicolumn-card--button-as-cursor{% endif %}">
              {%- if block.settings.use_card_as_link and block.settings.card_link != blank -%}
                <a
                  class="image-multicolumn-card__link"
                  href="{{ block.settings.card_link }}"
                  aria-label="{{ 'accessibility.link' | t }}"
                ></a>
              {%- elsif block.settings.use_card_as_link and block.settings.button_link != blank -%}
                <a
                  class="image-multicolumn-card__link"
                  href="{{ block.settings.button_link}}"
                  aria-label="{{ 'accessibility.link' | t }}"
                ></a>
              {%- endif -%}

              {%- if block.settings.image != blank -%}
                {% liquid
                  if section.settings.image_ratio == 'landscape'
                    assign settings_aspect_ratio = 1.73
                  elsif section.settings.image_ratio == 'portrait'
                    assign settings_aspect_ratio = 0.81
                  else
                    assign settings_aspect_ratio = 1
                  endif

                  assign calc_ratio = 1
                  if block.settings.object_fit == 'cover' and block.settings.image.aspect_ratio > settings_aspect_ratio
                    assign calc_ratio = block.settings.image.aspect_ratio | divided_by: settings_aspect_ratio | round: 2
                  endif
                %}

                {%- capture img_sizes -%}
                  {%- if section.settings.multicolumn_to_show == 1 -%}
                    (min-width: 1440px) calc({{ calc_ratio }} * 1280px), (min-width: 1200px) calc({{ calc_ratio }} * 88vw), (min-width: 750px) calc({{ calc_ratio }} * 97vw), (min-width: 576px) calc({{ calc_ratio }} * 95vw), calc({{ calc_ratio }} * 91vw)
                  {%- elsif section.settings.multicolumn_to_show == 2 -%}
                    (min-width: 1440px) calc({{ calc_ratio }} * 632px), (min-width: 1200px) calc({{ calc_ratio }} * 44vw), (min-width: 750px) calc({{ calc_ratio }} * 48vw), (min-width: 576px) calc({{ calc_ratio }} * 95vw), calc({{ calc_ratio }} * 91vw)
                  {%- elsif section.settings.multicolumn_to_show == 3 -%}
                    (min-width: 1440px) calc({{ calc_ratio }} * 416px), (min-width: 1200px) calc({{ calc_ratio }} * 29vw), (min-width: 750px) calc({{ calc_ratio }} * 48vw), (min-width: 576px) calc({{ calc_ratio }} * 95vw), calc({{ calc_ratio }} * 91vw)
                  {%- elsif section.settings.multicolumn_to_show == 4 -%}
                    (min-width: 1440px) calc({{ calc_ratio }} * 308px), (min-width: 1200px) calc({{ calc_ratio }} * 22vw), (min-width: 990px) calc({{ calc_ratio }} * 31vw), (min-width: 750px) calc({{ calc_ratio }} * 48vw), (min-width: 576px) calc({{ calc_ratio }} * 95vw), calc({{ calc_ratio }} * 91vw)
                  {%- endif -%}
                {%- endcapture -%}
                {%- capture style -%}
                  object-fit: {{ block.settings.object_fit }};
                {%- endcapture -%}
                {{
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag:
                    loading: 'lazy',
                    sizes: img_sizes,
                    widths: '308, 416, 535, 632, 720, 940, 1066, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600',
                    style: style
                }}
              {%- else -%}
                {% assign number_placeholder = forloop.index | modulo: 2 | plus: 1 %}
                {{ 'lifestyle-' | append: number_placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
              <div
                class="image-multicolumn-card__overlay"
                style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }}"
              ></div>
              <div class="image-multicolumn-card__button">
                {%- if block.settings.show_button != blank %}
                  {% render 'button', layout: block %}
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- if section.settings.swipe_on_mobile
        and section.blocks.size >= 1
        and section.settings.mobile_slider_layout_type == 'with_arrows'
      -%}
        <div class="no-js-hidden image-multicolumn__navigation image-multicolumn__navigation-{{ section.settings.slider_buttons_position }}">
          <button class="image-multicolumn__navigation-button image-multicolumn__navigation-button-prev swiper-button-prev">
            {% render 'icon-btn-arrow' %}
          </button>
          <button class="image-multicolumn__navigation-button image-multicolumn__navigation-button-next swiper-button-next">
            {% render 'icon-btn-arrow' %}
          </button>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

