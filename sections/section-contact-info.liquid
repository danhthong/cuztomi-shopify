{{ 'section-contactinfo.css' | asset_url | stylesheet_tag }}

<div class="contact-info">
  <div class="container">
    <div class="contact-info-content">
      <div class="contact-info-header">
        {%- if section.settings.heading != blank -%}
          <h2 class="contact-info-header__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <div class="contact-info-header__description">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
      <div class="contact-info-grid__wrapper">
        {% for block in section.blocks %}
          <div class="contact-info-card">
          {%- if block.settings.image != blank -%}
            <div class="image-container">
              {{
                block.settings.image
                | image_url: width: block.settings.image.width
                | image_tag:
                  sizes: "52px",
                  widths: '52',
                  class: 'card__image',
                  loading: 'lazy'
              }}
            </div>
          {%- endif -%}
          {%- if block.settings.heading != blank -%}
            <div class="contact-info-card__text">
              <span>{{ block.settings.heading | escape }}</span>
              <p class="detail">{{ block.settings.text }}</p>
            </div>
          {%- endif -%}
          </div>
        {% endfor %}
      </div>

      <div class="contact-info-form">
        {%- form 'contact', id: 'ContactForm' -%}
          {%- if form.posted_successfully? -%}
            <div class="form-status form-status-list form__message" tabindex="-1" autofocus>
              {% render 'icon-success' %}
              {{ 'templates.contact.form.post_success' | t }}
            </div>
          {%- elsif form.errors -%}
          {%- endif -%}
          <div class="field field__name has-icon name">
            <input
              class="field__input focus-inset"
              autocomplete="name"
              type="text"
              dir="ltr"
              id="ContactForm-name"
              name="contact[{{ 'templates.contact.form.name' | t }}]"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              placeholder="{{ section.settings.name_placeholder }}"
            >
            <label
              class="field__label body-small"
              for="ContactForm-name"
            >
              {{- 'templates.contact.form.name' | t -}}
            </label>
          </div>
          <div class="field field--with-error has-icon email">
            <input
              autocomplete="email"
              type="email"
              dir="ltr"
              id="ContactForm-email"
              class="field__input focus-inset"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
              {% endif %}
              placeholder="{{ section.settings.email_placeholder }}"
              required
            >
            <label
              class="field__label body-small"
              for="ContactForm-email"
            >
              {{- 'templates.contact.form.email' | t -}}
            </label>
            {%- if form.errors contains 'email' -%}
              <small class="contact-form__field-error" id="ContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </span>
              </small>
            {%- endif -%}
          </div>
          <div class="field">
            <textarea
              id="ContactForm-body"
              class="text-area field__input"
              name="contact[{{ 'templates.contact.form.comment' | t }}]"
              placeholder="{{ section.settings.message_placeholder | default: 'Write your message here...' }}"
              aria-required="true"
              required
            >
              {{- form.body -}}
            </textarea>
            <label
              class="field__label body-small"
              for="ContactForm-body"
            >
              {{- 'templates.contact.form.comment' | t -}}
            </label>
          </div>
          <div class="contact-form__bottom">
            <button type="submit" class="button button--primary focus-inset">
              <div class="button__content">
                <span class="button__label" data-label="{{ section.settings.button_text }}">
                  {{ section.settings.button_text }}
                </span>
              </div>
            </button>
          </div>

          {% if section.settings.additional_text != blank %}
            <div class="contact-form__add-text body-small">
              {{- section.settings.additional_text -}}
            </div>
          {% endif %}
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact Info",
  "class": "contact-info-section",
  "tag": "section",
  "enabled_on": {
    "templates": ["*"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Main options"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "t:sections.all.heading.label"
    },
    {
      "type": "inline_richtext",
      "id": "description",
      "label": "t:sections.all.text.label"
    },
    {
      "type": "inline_richtext",
      "id": "name_placeholder",
      "label": "Name placehoder",
      "default": "Enter your full name"
    },
    {
      "type": "inline_richtext",
      "id": "email_placeholder",
      "label": "Email placehoder",
      "default": "Enter your email"
    },
    {
      "type": "inline_richtext",
      "id": "message_placeholder",
      "label": "Message placehoder",
      "default": "Write your message here..."
    },
    {
      "type": "inline_richtext",
      "id": "button_text",
      "label": "Button Label",
      "default": "Send Message"
    },
    {
      "type": "richtext",
      "id": "additional_text",
      "label": "Additional text",
      "default": "<p>We usually reply within 24 hours (Monâ€“Fri).</p>"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "textarea",
          "id": "heading",
          "label": "t:sections.all.heading.label",
          "default": "Phone number"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.all.image.label"
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "t:sections.all.text.label",
          "default": "+1 (555) 000-0000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Info",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
